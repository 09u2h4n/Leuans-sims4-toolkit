<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="ModernDesign.MVVM.View.SemiAutoInstallerWindow"
        Title="Leuan | Semi-Automatic DLC Installer" 
        Height="648" 
        Width="998"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen" 
        Icon="/Icono_TLK.ico">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="ActionButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#0A6BF2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="20,14">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#3EC7E8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bg" Property="Background" Value="#404040"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="{x:Type Button}" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#30FFFFFF"/>
        </Style>

        <!-- Status Card Style -->
        <Style x:Key="StatusCard" TargetType="Border">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="6" 
                            CornerRadius="0" GlassFrameThickness="0" UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Border CornerRadius="16">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Padding="25,15">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button x:Name="BackBtn" Width="40" Height="40"
                                Background="Transparent" Foreground="White" 
                                BorderThickness="0" Cursor="Hand"
                                Click="BackBtn_Click" ToolTip="Back to main menu">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="Transparent" CornerRadius="10" Padding="8">
                                        <TextBlock Text="←" FontSize="20" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#20FFFFFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <TextBlock Text="🔧  Easy DLC Installer" Foreground="White" FontSize="18" 
                                   FontWeight="SemiBold" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <Button x:Name="CloseBtn" HorizontalAlignment="Right" Width="40" Height="40"
                            Background="Transparent" Foreground="White" BorderThickness="0" 
                            Cursor="Hand" Click="CloseBtn_Click"
                            WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border x:Name="bg" Background="Transparent" CornerRadius="10" Padding="8">
                                    <TextBlock Text="✕" FontSize="18" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="bg" Property="Background" Value="#EF4444"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                          WindowChrome.IsHitTestVisibleInChrome="True">
                <StackPanel Margin="35,5,35,35">

                    <!-- STEP 1: Select Download Folder -->
                    <Border Style="{StaticResource StatusCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Step Number Circle -->
                                <Border Grid.Column="0" Width="50" Height="50" 
                                        Background="#3EC7E8" CornerRadius="25"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="1" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="Step1Title" Text="Select Your Downloaded Files" 
                                               Foreground="White" FontSize="17" FontWeight="Bold"/>
                                    <TextBlock x:Name="Step1Description" 
                                               Text="Choose the folder where you saved your DLC files" 
                                               Foreground="#94A3B8" FontSize="13" Margin="0,4,0,0" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#20FFFFFF" CornerRadius="10" 
                                        Padding="15,12" BorderBrush="#3EC7E8" BorderThickness="2">
                                    <TextBlock x:Name="DownloadPathText" 
                                               Text="📂  Click 'Browse' to select folder..." 
                                               Foreground="#E5E7EB" FontSize="13"
                                               VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis"/>
                                </Border>

                                <Button x:Name="BrowseDownloadBtn" Grid.Column="1" 
                                        Content="📁 Browse Files" Margin="12,0,0,0"
                                        FontSize="14" Height="46"
                                        Style="{StaticResource ActionButton}" 
                                        Click="BrowseDownloadBtn_Click"
                                        WindowChrome.IsHitTestVisibleInChrome="True"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- STEP 2: Select Sims 4 Install Folder -->
                    <Border Style="{StaticResource StatusCard}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Step Number Circle -->
                                <Border Grid.Column="0" Width="50" Height="50" 
                                        Background="#0A6BF2" CornerRadius="25"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="2" FontSize="24" FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock x:Name="Step2Title" Text="Find Your Sims 4 Game" 
                                                   Foreground="White" FontSize="17" FontWeight="Bold"/>
                                        <TextBlock x:Name="Sims4StatusText" Text="  🔍 Searching..." 
                                                   Foreground="#F59E0B" FontSize="12" 
                                                   VerticalAlignment="Center" Margin="8,0,0,0"/>
                                    </StackPanel>
                                    <TextBlock x:Name="Step2Description" 
                                               Text="We'll try to find it automatically, or you can select it manually" 
                                               Foreground="#94A3B8" FontSize="13" Margin="0,4,0,0" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#20FFFFFF" CornerRadius="10" 
                                        Padding="15,12" BorderBrush="#0A6BF2" BorderThickness="2">
                                    <TextBlock x:Name="Sims4PathText" 
                                               Text="🎮  Searching for The Sims 4..." 
                                               Foreground="#E5E7EB" FontSize="13"
                                               VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis"/>
                                </Border>

                                <Button x:Name="BrowseSims4Btn" Grid.Column="1" 
                                        Content="Browse" Margin="12,0,0,0"
                                        FontSize="14" Height="46"
                                        Style="{StaticResource SecondaryButton}" 
                                        Click="BrowseSims4Btn_Click"
                                        WindowChrome.IsHitTestVisibleInChrome="True"/>

                                <Button x:Name="AutoDetectBtn" Grid.Column="2" 
                                        Content="🔍 Auto Find" Margin="8,0,0,0"
                                        FontSize="14" Height="46"
                                        Style="{StaticResource SecondaryButton}" 
                                        Click="AutoDetectBtn_Click"
                                        WindowChrome.IsHitTestVisibleInChrome="True"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- DETECTED FILES PANEL -->
                    <Border x:Name="DetectedFilesPanel" Style="{StaticResource StatusCard}" 
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Width="40" Height="40" Background="#22C55E" CornerRadius="20">
                                    <TextBlock Text="✓" FontSize="22" FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="DetectedFilesTitle" Text="Files Found!" 
                                               Foreground="White" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock x:Name="DetectedCountText" Text="0 DLC files ready to install" 
                                               Foreground="#3EC7E8" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Row="1" Background="#10FFFFFF" CornerRadius="12" MaxHeight="220">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="DetectedFilesList" Margin="12"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- PROGRESS PANEL -->
                    <Border x:Name="ProgressPanel" Style="{StaticResource StatusCard}" 
                            Visibility="Collapsed">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Width="40" Height="40" Background="#F59E0B" CornerRadius="20">
                                    <TextBlock Text="⚙" FontSize="20" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="ProgressTitle" Text="Installing Your DLCs..." 
                                               Foreground="White" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="Please wait, this may take a few minutes" 
                                               Foreground="#94A3B8" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <Grid Margin="0,0,0,10">
                                <TextBlock x:Name="ProgressText" Text="Getting ready..." 
                                           Foreground="White" FontSize="13" FontWeight="SemiBold"/>
                                <TextBlock x:Name="ProgressPercent" Text="0%" 
                                           Foreground="#3EC7E8" FontSize="16" FontWeight="Bold"
                                           HorizontalAlignment="Right"/>
                            </Grid>

                            <Border Height="12" CornerRadius="6" Background="#20FFFFFF" Margin="0,0,0,15">
                                <Border x:Name="ProgressBar" HorizontalAlignment="Left" Width="0" 
                                        CornerRadius="6">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3EC7E8" Offset="0"/>
                                            <GradientStop Color="#0A6BF2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>

                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📦 Current File:" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="CurrentFileText" Text="None" 
                                               Foreground="#E5E7EB" FontSize="12" Margin="6,0,0,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="Progress:" Foreground="#94A3B8" FontSize="12" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ProcessedCountText" Text="0/0" 
                                               Foreground="#3EC7E8" FontSize="12" FontWeight="Bold" Margin="6,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- LOG PANEL -->
                    <Border x:Name="LogPanel" Style="{StaticResource StatusCard}" 
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="160"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="📋" FontSize="20" VerticalAlignment="Center"/>
                                <TextBlock x:Name="LogTitle" Text="Installation Details" 
                                           Foreground="White" FontSize="15" FontWeight="SemiBold" 
                                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                            </StackPanel>

                            <Border Grid.Row="1" Background="#10FFFFFF" CornerRadius="12" Padding="12">
                                <TextBox x:Name="LogTextBox"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#E5E7EB"
                                         FontSize="11"
                                         FontFamily="Consolas"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- INSTALLED DLCs PANEL -->
                    <Border x:Name="InstalledDLCsPanel" Style="{StaticResource StatusCard}" 
                            Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Width="45" Height="45" Background="#22C55E" CornerRadius="22">
                                    <TextBlock Text="✓" FontSize="26" FontWeight="Bold" 
                                               Foreground="White" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                    <TextBlock x:Name="InstalledDLCsTitle" Text="Successfully Installed!" 
                                               Foreground="White" FontSize="17" FontWeight="Bold"/>
                                    <TextBlock x:Name="InstalledDLCsCount" Text="0 DLCs are now ready to play" 
                                               Foreground="#22C55E" FontSize="13" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Row="1" Background="#10FFFFFF" CornerRadius="12" MaxHeight="280">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="InstalledDLCsList" Margin="12"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- ACTION BUTTON -->
                    <Button x:Name="InstallBtn" 
                            Content="🚀  Start Installing My DLCs!" 
                            Height="60" FontSize="17" FontWeight="Bold"
                            Style="{StaticResource ActionButton}" 
                            Click="InstallBtn_Click" 
                            IsEnabled="False"
                            WindowChrome.IsHitTestVisibleInChrome="True" 
                            Margin="0,5,0,0"/>

                </StackPanel>
            </ScrollViewer>

        </Grid>
    </Border>

</Window>