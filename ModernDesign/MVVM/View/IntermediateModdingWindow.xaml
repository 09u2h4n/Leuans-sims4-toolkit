<Window x:Class="ModernDesign.MVVM.View.IntermediateModdingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intermediate Modding Hub"
        Height="628" Width="966"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="GuideCard" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.03" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.03" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="🛠️ Intermediate Modding Hub" Style="{StaticResource TitleStyle}" FontSize="24"/>
            <TextBlock x:Name="SubtitleText" Text="Take your modding skills to the next level" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- TAB BUTTONS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="TabCreateMod" Content="🎨 Creating Your First Mod" Style="{StaticResource TabButton}" Background="#7C3AED" Foreground="White" Click="TabCreateMod_Click"/>
            <Button x:Name="TabMerge" Content="📦 How to Merge" Style="{StaticResource TabButton}" Background="#1E293B" Foreground="#E5E7EB" Click="TabMerge_Click"/>
            <Button x:Name="TabGuides" Content="📚 Guides &amp; Tutorials" Style="{StaticResource TabButton}" Background="#1E293B" Foreground="#E5E7EB" Click="TabGuides_Click"/>
        </StackPanel>

        <!-- CONTENT AREA -->
        <Border Grid.Row="2" Background="#111827" CornerRadius="12">
            <Grid>
                <!-- TAB 1: Creating Your First Mod -->
                <ScrollViewer x:Name="TabCreateModContent" VerticalScrollBarVisibility="Auto" Visibility="Visible" HorizontalAlignment="Center">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="CreateModTitle" Text="🎨 Creating Your First Mod" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="CreateModDesc" Text="Follow these 3 lessons to start your modding journey" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <!-- Lesson Cards -->
                        <WrapPanel>
                            <Border x:Name="Lesson1Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Lesson1Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#22C55E" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="1" FontSize="28" FontWeight="Bold" Foreground="#86EFAC" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="L1Title" Text="Download S4S" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="L1Desc" Text="Get Sims 4 Studio and its dependencies" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="Lesson2Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Lesson2Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#38BDF8" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="2" FontSize="28" FontWeight="Bold" Foreground="#7DD3FC" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="L2Title" Text="Plan Your Mod" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="L2Desc" Text="Know what you want to create and have the right mindset" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="Lesson3Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Lesson3Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#A78BFA" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="3" FontSize="28" FontWeight="Bold" Foreground="#C4B5FD" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="L3Title" Text="Ask for Help" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="L3Desc" Text="AI, forums, repositories - it's not cheating!" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <!-- Button to open categories -->
                        <Button x:Name="OpenCategoriesButton" Content="🚀 Start Creating - Choose a Category" Padding="16,12" Margin="0,37,0,0" Background="#7C3AED" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand" Click="OpenCategories_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- TAB 2: How to Merge -->
                <ScrollViewer x:Name="TabMergeContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="MergeTitle" Text="📦 How to Merge Packages" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="MergeDesc" Text="Combine multiple .package files into one for faster loading" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Step 1" Foreground="#22C55E" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="MergeStep1" Text="Open Sims 4 Studio and go to Tools → Batch Fixes" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Step 2" Foreground="#38BDF8" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="MergeStep2" Text="Select 'Merge Packages' and choose your .package files" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Step 3" Foreground="#A78BFA" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="MergeStep3" Text="Save the merged file and delete/backup the originals" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#7F1D1D" CornerRadius="10" Padding="15" Margin="0,10,0,0">
                            <TextBlock x:Name="MergeWarning" Text="⚠️ Warning: Don't merge .ts4script files! Only .package files can be merged. Also, merging makes it harder to identify individual mods later." Style="{StaticResource BodyStyle}" FontSize="11" Foreground="#FCA5A5"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- TAB 3: Guides & Tutorials -->
                <ScrollViewer x:Name="TabGuidesContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="GuidesTitle" Text="📚 Guides &amp; Tutorials" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="GuidesDesc" Text="Video tutorials and documentation to master Sims 4 Studio" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <TextBlock x:Name="VideoSection" Text="🎬 Video Tutorials" Style="{StaticResource TitleStyle}" FontSize="14" Foreground="#F97316" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="VideosList"/>

                        <TextBlock x:Name="DocsSection" Text="📄 Documentation" Style="{StaticResource TitleStyle}" FontSize="14" Foreground="#22D3EE" Margin="0,20,0,10"/>
                        <ItemsControl x:Name="DocsList"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- FOOTER -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="DownloadS4SButton" Content="⬇️ Download Tools" Padding="12,6" Margin="0,0,8,0" Background="#22D3EE" Foreground="#0F172A" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="DownloadS4S_Click"/>
            <Button x:Name="CloseButton" Content="Close" Padding="12,6" Background="#374151" Foreground="White" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>