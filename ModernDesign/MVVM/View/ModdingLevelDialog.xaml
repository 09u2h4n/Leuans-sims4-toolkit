<Window x:Class="ModernDesign.MVVM.View.ModdingLevelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Creating"
        Height="450" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="StartButton" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.03" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.03" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Border CornerRadius="15" Background="#0F172A" BorderBrush="#1E293B" BorderThickness="1">
        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                <!-- Icon/Illustration -->
                <Viewbox Width="120" Height="120" Margin="0,0,0,30">
                    <Canvas Width="120" Height="120">
                        <Ellipse Fill="#22C55E" Width="120" Height="120" Opacity="0.15"/>
                        <Path Fill="#22C55E" Data="M60,30 L75,60 L60,90 L45,60 Z" />
                        <Ellipse Fill="#22C55E" Width="20" Height="20" Canvas.Left="50" Canvas.Top="20"/>
                        <Ellipse Fill="#3B82F6" Width="15" Height="15" Canvas.Left="75" Canvas.Top="50"/>
                        <Ellipse Fill="#8B5CF6" Width="12" Height="12" Canvas.Left="35" Canvas.Top="70"/>
                    </Canvas>
                </Viewbox>

                <!-- Title -->
                <TextBlock x:Name="TitleText" 
                           Text="Ready to Create Your First Mod?" 
                           Style="{StaticResource TitleStyle}" 
                           FontSize="24" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Description -->
                <TextBlock x:Name="DescText" 
                           Text="Start from the basics and learn step by step. No prior experience needed!" 
                           Style="{StaticResource BodyStyle}" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           Margin="0,0,0,40"
                           Opacity="0.8"/>

                <!-- Main CTA Button -->
                <Border Style="{StaticResource StartButton}" 
                        Background="#22C55E" 
                        CornerRadius="12" 
                        Padding="0" 
                        Margin="0,0,0,15"
                        MouseLeftButtonUp="BasicCard_Click">
                    <Grid Height="60">
                        <TextBlock x:Name="BasicTitle" 
                                   Text="🚀 Start Learning Now" 
                                   Style="{StaticResource TitleStyle}" 
                                   FontSize="18" 
                                   Foreground="#0F172A"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Cancel Button -->
                <Button x:Name="CancelButton" 
                        Content="Maybe Later" 
                        Padding="12,8" 
                        Background="Transparent" 
                        Foreground="#9CA3AF" 
                        BorderThickness="0" 
                        Cursor="Hand" 
                        Click="CancelButton_Click" 
                        HorizontalAlignment="Center"
                        FontFamily="Bahnschrift Light"
                        FontSize="13"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>