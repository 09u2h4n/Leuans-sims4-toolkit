<UserControl x:Class="ModernDesign.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch" Height="576" Width="845">

    <UserControl.Resources>

        <!-- Estilo para tarjetas clickeables -->
        <Style x:Key="ClickableCard" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1.03" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1.03" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="0.95" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo universal para tooltips -->
        <Style x:Key="CardToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Placement" Value="MousePoint"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛈" Margin="0,0,6,0"/>
                                <ContentPresenter/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <!-- FONDO + CONTENIDO -->
    <Grid Margin="-26,0,0,0" Opacity="0.995">
        <Grid.Background>
            <ImageBrush ImageSource="/MVVM/View/logo.png"
                        Stretch="UniformToFill"
                        Opacity="0.010"
                        TileMode="None"
                        AlignmentX="Center"
                        AlignmentY="Center"/>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Hidden"
              HorizontalScrollBarVisibility="Disabled">
            <ScrollViewer.Background>
                <ImageBrush/>
            </ScrollViewer.Background>
            <!-- Contenedor centrado, ancho máximo -->
            <Grid Margin="0,10,0,20"
                  HorizontalAlignment="Center"
                  MaxWidth="900">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título Popular -->
                    <RowDefinition Height="Auto"/>
                    <!-- Cards principales -->
                    <RowDefinition Height="Auto"/>
                    <!-- Título Support -->
                    <RowDefinition Height="Auto"/>
                    <!-- Support Card -->
                </Grid.RowDefinitions>

                <!-- TÍTULO POPULAR -->
                <TextBlock x:Name="PopularTitleText"
                           Grid.Row="0"
                           Foreground="#F9FAFB"
                           HorizontalAlignment="Center"
                           FontSize="22"
                           Margin="0,0,0,20"
                           FontWeight="Bold"
                           FontStyle="Italic"
                           FontFamily="Bahnschrift Light"
                           Text="Popular">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1"
                                          BlurRadius="8"
                                          Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- CARDS PRINCIPALES (responsive) -->
                <WrapPanel Grid.Row="1"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"
                           ItemHeight="200">
                    <!-- CARD: UPDATER -->
                    <Border x:Name="UpdaterCard"
                            Width="400" Height="200"
                            Style="{StaticResource ClickableCard}"
                            Margin="0,2,20,-2"
                            MouseLeftButtonUp="UpdaterCard_Click"
                            ToolTipService.InitialShowDelay="200" Background="#3F6B6B6B">

                        <Border.ToolTip>
                            <ToolTip Style="{StaticResource CardToolTipStyle}">
                                <TextBlock x:Name="UpdaterTooltipText"
                                           Text="Instala o actualiza automáticamente todos los DLC disponibles."/>
                            </ToolTip>
                        </Border.ToolTip>

                        <Border.Clip>
                            <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,400,200"/>
                        </Border.Clip>

                        <Grid>
                            <StackPanel>
                                <TextBlock x:Name="UpdaterMainTitle"
                                           Text="Install All The &#x0a;+105 DLC's"
                                           Foreground="#F9FAFB" FontSize="26"
                                           Margin="20,10,10,0"
                                           FontFamily="Bahnschrift Light"
                                           FontStyle="Italic" FontWeight="Bold"
                                           TextWrapping="Wrap">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1"
                                                          BlurRadius="8"
                                                          Opacity="0.9"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                                <TextBlock x:Name="UpdaterCallToAction"
                                           Text="Click Here!"
                                           Foreground="#F9FAFB" FontSize="18"
                                           Margin="20,10,10,0"
                                           FontFamily="Bahnschrift Light"
                                           FontWeight="Bold" FontStyle="Italic">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1"
                                                          BlurRadius="6"
                                                          Opacity="0.9"/>
                                    </TextBlock.Effect>
                                </TextBlock>

                                <TextBlock x:Name="UpdaterInMemory"
                                           Text="In memory of Anadius."
                                           Foreground="#FF949496" FontSize="16"
                                           Margin="20,57,10,0" Opacity="0.9"
                                           FontFamily="Bahnschrift Light"
                                           FontStyle="Italic" FontWeight="Bold">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="1"
                                                          BlurRadius="6"
                                                          Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </StackPanel>

                            <Image Margin="206,-17,-18,-10"
                                   Source="/MVVM/View/updater.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Grid>
                    </Border>

                    <!-- CARD: REPAIR -->
                    <Border x:Name="RepairCard"
                            Width="280" Height="200"
                            CornerRadius="10"
                            Style="{StaticResource ClickableCard}"
                            MouseLeftButtonDown="RepairCard_Click"
                            ToolTipService.InitialShowDelay="200" Background="#4C6B6B6B">

                        <Border.ToolTip>
                            <ToolTip Style="{StaticResource CardToolTipStyle}">
                                <TextBlock x:Name="RepairTooltipText"
                                           Text="Repara archivos corruptos del juego, estructura y carpetas esenciales."/>
                            </ToolTip>
                        </Border.ToolTip>

                        <Image Margin="8,-10,8,-16"
                               Source="/MVVM/View/DLCUnlocker_Green.png"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </WrapPanel>

                <!-- TÍTULO SUPPORT -->
                <TextBlock x:Name="SupportTitleText"
                           Grid.Row="1"
                           Text="Has this ToolKit been helpful to you?"
                           Foreground="#F9FAFB" FontSize="18"
                           HorizontalAlignment="Center" 
                           Margin="0,242,0,111"
                           FontWeight="SemiBold" 
                           FontFamily="Bahnschrift Light"
                           TextAlignment="Center" Grid.RowSpan="3">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1"
                                          BlurRadius="8"
                                          Opacity="0.9"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- SUPPORT CARD (Para usuarios sin Developer Mode) -->
                <Border Grid.Row="1"
                        x:Name="SupportCard"
                        Width="700" 
                        Height="Auto"
                        CornerRadius="12"
                        Style="{StaticResource ClickableCard}"
                        Margin="0,274,0,42"
                        MouseLeftButtonDown="SupportCard_Click"
                        Background="#4C6B6B6B"
                        Padding="30,25"
                        Visibility="Visible" Grid.RowSpan="3">

                    <StackPanel>
                        <!-- Título principal -->
                        <TextBlock x:Name="SupportMainTitle"
                                   Text="Support Me with only $1!"
                                   Foreground="#F9FAFB" 
                                   FontSize="24"
                                   FontFamily="Bahnschrift Light"
                                   FontStyle="Italic" 
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15"
                                   TextAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1"
                                                  BlurRadius="8"
                                                  Opacity="0.9"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Subtítulo -->
                        <TextBlock x:Name="SupportSubtitle"
                                   Foreground="#E5E7EB" 
                                   FontSize="15"
                                   FontFamily="Bahnschrift Light"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap">
                            <Run x:Name="SupportSubtitleRun" Text="Donating ONLY $1 will make you a "/>
                            <Run Foreground="#FFA500" FontWeight="Bold" Text="&quot;Supporter&quot;"/>
                            <Run x:Name="SupportSubtitleRun2" Text=" and you will gain:"/>
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1"
                                                  BlurRadius="6"
                                                  Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Lista de beneficios -->
                        <StackPanel Margin="40,0,40,20">
                            <TextBlock x:Name="Benefit1"
                                       Text="✓ Removing this message"
                                       Foreground="#A7F3D0" 
                                       FontSize="14"
                                       FontFamily="Bahnschrift Light"
                                       Margin="0,0,0,8"/>

                            <TextBlock x:Name="Benefit2"
                                       Foreground="#A7F3D0" 
                                       FontSize="14"
                                       FontFamily="Bahnschrift Light"
                                       Margin="0,0,0,8" FontWeight="Bold" FontStyle="Italic">
                                <Run Text="✓ "/>
                                <Run x:Name="Benefit2Run1" Text="Developer Mode (Check "/>
                                <Run FontWeight="Bold" Text="Modding"/>
                                <Run x:Name="Benefit2Run2" Text=" the button that says "/>
                                <Run FontWeight="Bold" Text="&quot;Profile&quot;"/>
                                <Run Text=")"/>
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="1"
                                                      BlurRadius="4"
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <TextBlock x:Name="Benefit3"
                                       Text="✓ Discord Role"
                                       Foreground="#A7F3D0" 
                                       FontSize="14"
                                       FontFamily="Bahnschrift Light"
                                       Margin="0,0,0,8">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="1"
                                                      BlurRadius="4"
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <TextBlock x:Name="Benefit4"
                                       Text="✓ My heart ❤️"
                                       Foreground="#FCA5A5" 
                                       FontSize="14"
                                       FontFamily="Bahnschrift Light"
                                       FontWeight="SemiBold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="1"
                                                      BlurRadius="4"
                                                      Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>

                        <!-- Call to action -->
                        <TextBlock x:Name="SupportCTA"
                                   Text="Click here to support! ☕"
                                   Foreground="#FBBF24" 
                                   FontSize="16"
                                   FontFamily="Bahnschrift Light"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,10,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1"
                                                  BlurRadius="6"
                                                  Opacity="0.9"
                                                  Color="#FFA500"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- SUPPORTER WELCOME CARD (Para usuarios con Developer Mode desbloqueado) -->
                <Border Grid.Row="3"
                        x:Name="SupporterWelcomeCard"
                        Width="700" 
                        Height="Auto"
                        CornerRadius="12"
                        Margin="0,0,0,20"
                        Background="#3F6B6B6B"
                        Padding="30,25"
                        Visibility="Collapsed">

                    <StackPanel>
                        <!-- Icono de estrella con efecto dorado -->
                        <TextBlock Text="✨"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,15">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  BlurRadius="20"
                                                  Opacity="0.8"
                                                  Color="#FFD700"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Mensaje de bienvenida -->
                        <TextBlock x:Name="SupporterWelcomeText"
                                   Text="Welcome Supporter!, Special Features are enabled for you"
                                   Foreground="#F9FAFB" 
                                   FontSize="20"
                                   FontFamily="Bahnschrift Light"
                                   FontStyle="Italic" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Opacity="0.85"
                                   Margin="0,0,0,15">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="1"
                                                  BlurRadius="12"
                                                  Opacity="0.7"
                                                  Color="#FFD700"/>
                            </TextBlock.Effect>
                        </TextBlock>

                        <!-- Corazón decorativo -->
                        <TextBlock Text="❤️"
                                   FontSize="32"
                                   HorizontalAlignment="Center"
                                   Opacity="0.7">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0"
                                                  BlurRadius="15"
                                                  Opacity="0.6"
                                                  Color="#FF6B6B"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </Grid>
        </ScrollViewer>
        
        
    </Grid>

</UserControl>