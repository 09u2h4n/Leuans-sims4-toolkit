<UserControl x:Class="ModernDesign.MVVM.View.MainSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700">

    <UserControl.Resources>
        <Style x:Key="SelectionButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="30,40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="icon" Text="{TemplateBinding Tag}" 
                                           FontSize="48" HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>
                                <TextBlock x:Name="title" Text="{TemplateBinding Content}" 
                                           FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock x:Name="subtitle" 
                                           Text="{TemplateBinding ToolTip}" 
                                           FontSize="11" Foreground="#94A3B8" 
                                           HorizontalAlignment="Center" 
                                           TextWrapping="Wrap" TextAlignment="Center"
                                           MaxWidth="250"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#25FFFFFF"/>
                                <Setter TargetName="icon" Property="Foreground" Value="#3EC7E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,40">
                <TextBlock Text="🎮 ¿Qué deseas hacer?" 
                           x:Name="HeaderText"
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Selecciona una opción para continuar" 
                           x:Name="SubHeaderText"
                           Foreground="#94A3B8" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Selection Buttons -->
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Download DLCs Button -->
                <Button x:Name="DownloadDLCsBtn" 
                        Grid.Column="0"
                        Content="Descargar DLC's"
                        Tag="📦"
                        ToolTip="Si ya posees el juego y quieres instalarle los DLC's"
                        Style="{StaticResource SelectionButton}"
                        Click="DownloadDLCsBtn_Click"/>

                <!-- Update Game Button -->
                <Button x:Name="UpdateGameBtn" 
                        Grid.Column="2"
                        Content="Actualizar el Juego"
                        Tag="🔄"
                        ToolTip="Si quieres actualizar tu Sims 4 a la última versión"
                        Style="{StaticResource SelectionButton}"
                        Click="UpdateGameBtn_Click"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>