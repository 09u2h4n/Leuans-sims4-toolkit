<Window x:Class="ModernDesign.MVVM.View.DeveloperProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Developer Mode Progress"
        Width="550" Height="650"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="#1E293B" CornerRadius="16" Padding="25">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.6" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="💻" FontSize="48" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#F59E0B" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TitleText" Text="Developer Mode Progress" 
                           FontSize="22" FontWeight="Bold" Foreground="White" 
                           FontFamily="Bahnschrift Light" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBlock x:Name="SubtitleText" Text="Complete all requirements to unlock" 
                           FontSize="12" Foreground="#94A3B8" 
                           FontFamily="Bahnschrift Light" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Progress Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Overall Progress Bar -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock x:Name="ProgressPercentageText" Text="Progress: 0%" 
                                       FontSize="14" FontWeight="Bold" Foreground="White" 
                                       FontFamily="Bahnschrift Light" Margin="0,0,0,8"/>
                            <Border Height="8" CornerRadius="4" Background="#334155">
                                <Border x:Name="ProgressBar" 
                                        HorizontalAlignment="Left" 
                                        Width="0" 
                                        CornerRadius="4">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#F59E0B" Offset="0"/>
                                            <GradientStop Color="#22C55E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- Section 1: Gold Medals -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="🥇 All Gold Medals" 
                                           FontSize="14" FontWeight="Bold" Foreground="White" 
                                           FontFamily="Bahnschrift Light" VerticalAlignment="Center"/>
                                <TextBlock x:Name="GoldMedalsStatus" Text="❌" 
                                           FontSize="20" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock x:Name="GoldMedalsDesc" 
                                       Text="Complete all 7 tutorials with Gold medals" 
                                       FontSize="11" Foreground="#94A3B8" 
                                       FontFamily="Bahnschrift Light" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Section 2: Features Visited -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock x:Name="FeaturesTitle" Text="🎯 Visit All Features (0/10)" 
                                           FontSize="14" FontWeight="Bold" Foreground="White" 
                                           FontFamily="Bahnschrift Light" VerticalAlignment="Center"/>
                                <TextBlock x:Name="FeaturesStatus" Text="❌" 
                                           FontSize="20" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Lista de features -->
                            <StackPanel x:Name="FeaturesList" Margin="0,5,0,0">
                                <!-- Se llenará dinámicamente -->
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Section 3: Donation -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15">
                        <StackPanel>
                            <Grid Margin="0,0,0,10">
                                <TextBlock Text="💰 Donate $1 USD" 
                                           FontSize="14" FontWeight="Bold" Foreground="White" 
                                           FontFamily="Bahnschrift Light" VerticalAlignment="Center"/>
                                <TextBlock x:Name="DonationStatus" Text="❌" 
                                           FontSize="20" HorizontalAlignment="Right"/>
                            </Grid>
                            <TextBlock x:Name="DonationDesc" 
                                       Text="Support the development with a minimum $1 USD donation" 
                                       FontSize="11" Foreground="#94A3B8" 
                                       FontFamily="Bahnschrift Light" TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <Button x:Name="DonateButton" Content="💖 Donate Now" 
                                    Padding="12,8" Background="#F59E0B" Foreground="White" 
                                    FontWeight="Bold" FontSize="12" BorderThickness="0" 
                                    Cursor="Hand" Click="DonateButton_Click" FontFamily="Bahnschrift Light">
                                <Button.Effect>
                                    <DropShadowEffect Color="#F59E0B" BlurRadius="12" ShadowDepth="0" Opacity="0.5"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Margin="0,20,0,0">
                <Button x:Name="CloseButton" Content="Close" 
                        Padding="15,10" Background="#334155" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" Click="CloseButton_Click" 
                        FontFamily="Bahnschrift Light" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</Window>