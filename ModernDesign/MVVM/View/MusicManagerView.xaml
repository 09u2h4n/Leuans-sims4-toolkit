<Window x:Class="ModernDesign.MVVM.View.MusicManagerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Music Manager - Custom Downloads"
        Width="1024"
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        MinWidth="1024"
        MinHeight="700"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyDownloadsButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#8B5CF6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7C3AED"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6366F1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4F46E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RefreshButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#22C55E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#16A34A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OrganizeButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ChangeFolderButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#8B5CF6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7C3AED"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchResultCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.03" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.03" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#0F172A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <!-- HEADER -->
            <Grid VerticalAlignment="Top" Margin="30,20,30,0" Height="80">
                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="🎵 Music Manager" Style="{StaticResource TitleTextBlock}" FontSize="28"/>
                    <TextBlock x:Name="SubtitleText" Text="Download and manage your custom music" Style="{StaticResource BodyTextBlock}" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="CloseButton"
                        Content="✕" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="32"
                        Height="32"
                        Style="{StaticResource CloseButtonStyle}"
                        FontSize="16"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- SEARCH PANEL -->
            <Grid x:Name="SearchPanel" Margin="30,110,30,30">
                <!-- SEARCH BAR -->
                <Border Background="#1E293B" CornerRadius="12" Height="120" VerticalAlignment="Top">
                    <Grid Margin="20">
                        <StackPanel>
                            <!-- Search Box -->
                            <Grid Margin="0,0,0,10">
                                <Border Background="#0F172A" CornerRadius="8" Height="40">
                                    <Grid>
                                        <TextBox x:Name="SearchBox"
                                                 Background="Transparent"
                                                 Foreground="White"
                                                 BorderThickness="0"
                                                 FontFamily="Bahnschrift Light"
                                                 FontSize="14"
                                                 Padding="12,0"
                                                 VerticalContentAlignment="Center"
                                                 KeyDown="SearchBox_KeyDown"/>
                                        <TextBlock x:Name="SearchPlaceholder"
                                                   Text="Search on YouTube..."
                                                   Foreground="#6B7280"
                                                   FontFamily="Bahnschrift Light"
                                                   FontSize="14"
                                                   Padding="12,0"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button Content="🔍"
                                                Background="#6366F1"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Width="80"
                                                Height="32"
                                                HorizontalAlignment="Right"
                                                Margin="0,0,4,0"
                                                Cursor="Hand"
                                                FontSize="14"
                                                Click="SearchButton_Click">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#6366F1"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#4F46E5"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Options -->
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="QualityLabel" Text="Quality:" Style="{StaticResource BodyTextBlock}" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <CheckBox x:Name="TurboModeCheck" Content="Turbo Mode (Fast)" Foreground="#E5E7EB" FontFamily="Bahnschrift Light" FontSize="11" Margin="0,0,15,0" Checked="TurboModeCheck_Checked"/>
                                <CheckBox x:Name="QualityModeCheck" Content="Quality Mode (High)" Foreground="#E5E7EB" FontFamily="Bahnschrift Light" FontSize="11" Margin="0,0,15,0" Checked="QualityModeCheck_Checked"/>
                                <CheckBox x:Name="UseCookiesCheck" Content="Use Cookies" Foreground="#E5E7EB" FontFamily="Bahnschrift Light" FontSize="11"/>

                                <Button x:Name="MyDownloadsButton"
                                        Content="📁 My Downloads"
                                        Style="{StaticResource MyDownloadsButtonStyle}"
                                        FontSize="11"
                                        Margin="20,0,0,0"
                                        Click="MyDownloadsButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- SEARCH RESULTS -->
                <ScrollViewer Margin="0,135,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- Loading -->
                        <StackPanel x:Name="LoadingSearchPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                            <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBlock Text="Searching YouTube..." Style="{StaticResource TitleTextBlock}" FontSize="16" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Empty -->
                        <StackPanel x:Name="EmptySearchPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                            <TextBlock Text="🎵" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15" Opacity="0.5"/>
                            <TextBlock x:Name="EmptySearchText" Text="Search any YouTube video" Style="{StaticResource TitleTextBlock}" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="EmptySearchSubText" Text="Type a song name, artist or video" Style="{StaticResource BodyTextBlock}" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Results Grid -->
                        <WrapPanel x:Name="SearchResultsGrid" Visibility="Collapsed" HorizontalAlignment="Left"/>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- DOWNLOADS PANEL -->
            <Grid x:Name="DownloadsPanel" Margin="30,110,30,30" Visibility="Collapsed">
                <!-- TOOLBAR -->
                <Border Background="#1E293B" CornerRadius="12" Height="60" VerticalAlignment="Top">
                    <Grid Margin="20,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Button x:Name="BackToSearchButton"
                                    Content="⬅️ Back to Search"
                                    Style="{StaticResource BackButtonStyle}"
                                    FontSize="11"
                                    Click="BackToSearchButton_Click"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock x:Name="FolderPathText" Text="📁 Loading..." Style="{StaticResource BodyTextBlock}" FontSize="10" VerticalAlignment="Center" Margin="0,0,10,0" MaxWidth="200" TextTrimming="CharacterEllipsis"/>
                            <Button x:Name="ChangeFolderButton"
                                    Content="📁 Change Folder"
                                    Style="{StaticResource ChangeFolderButtonStyle}"
                                    FontSize="10"
                                    Margin="0,0,10,0"
                                    Click="ChangeFolderButton_Click"/>
                            <TextBlock x:Name="DownloadCountText" Text="0 downloads" Style="{StaticResource BodyTextBlock}" FontSize="11" VerticalAlignment="Center" Margin="0,0,15,0"/>
                            <Button x:Name="OrganizeButton"
                                    Content="📂 Organize"
                                    Style="{StaticResource OrganizeButtonStyle}"
                                    FontSize="11"
                                    Margin="0,0,10,0"
                                    Click="OrganizeButton_Click"/>
                            <Button x:Name="RefreshButton"
                                    Content="🔄 Refresh"
                                    Style="{StaticResource RefreshButtonStyle}"
                                    FontSize="11"
                                    Click="RefreshButton_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- DOWNLOADS GRID -->
                <ScrollViewer Margin="0,75,0,0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <Grid>
                        <!-- Empty -->
                        <StackPanel x:Name="EmptyDownloadsPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                            <TextBlock Text="📁" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,15" Opacity="0.5"/>
                            <TextBlock x:Name="EmptyDownloadsText" Text="You don't have downloads yet" Style="{StaticResource TitleTextBlock}" FontSize="18" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="EmptyDownloadsSubText" Text="Search and download music from YouTube" Style="{StaticResource BodyTextBlock}" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Downloads Grid -->
                        <WrapPanel x:Name="DownloadsGrid" Visibility="Collapsed" HorizontalAlignment="Left"/>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <!-- REPOSITORY LINK -->
            <TextBlock x:Name="RepositoryLink"
                       Text="See Downloader Repository"
                       FontFamily="Bahnschrift Light"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,8"
                       Foreground="#6B7280"
                       TextDecorations="Underline"
                       Cursor="Hand"
                       Opacity="0.7"
                       MouseLeftButtonUp="RepositoryLink_Click">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="#6B7280"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#9CA3AF"/>
                                <Setter Property="Opacity" Value="1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- PROGRESS OVERLAY -->
            <Grid x:Name="ProgressOverlay" Background="#BF020617" Visibility="Collapsed">
                <Border CornerRadius="16" Background="#1E293B" Width="400" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="30">
                    <StackPanel>
                        <TextBlock x:Name="ProgressTitle" Text="Processing..." Style="{StaticResource TitleTextBlock}" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <ProgressBar x:Name="ProgressBar" Height="8" Background="#334155" Foreground="#22C55E" Minimum="0" Maximum="100" Value="0"/>
                        <TextBlock x:Name="ProgressText" Text="0%" Style="{StaticResource BodyTextBlock}" FontSize="12" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>