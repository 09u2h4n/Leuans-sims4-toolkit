<Window x:Class="ModernDesign.MVVM.View.InstallModsCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Install Mods – Checker"
        Height="320"
        Width="540"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="16" Padding="16" Background="#020617">
        <Border.Effect>
            <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <DockPanel Grid.Row="0">
                <TextBlock x:Name="WindowTitleText" Text="Install Mods – Checker" Foreground="#F9FAFB" FontFamily="Bahnschrift Light" FontWeight="Bold" FontStyle="Italic" FontSize="16" VerticalAlignment="Center"/>
                <Button Content="✕" Width="26" Height="26" DockPanel.Dock="Right" Background="#EF4444" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Close_Click" Margin="8,0,0,0"/>
            </DockPanel>

            <!-- CONTENIDO -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,12">
                <StackPanel>
                    <TextBlock x:Name="CheckerIntroText" Text="I'll automatically search for the Mods folder in your The Sims 4 documents." Foreground="#E5E7EB" FontFamily="Bahnschrift Light" FontStyle="Italic" FontSize="12" TextWrapping="Wrap"/>

                    <TextBlock x:Name="AutoPathText" Margin="0,8,0,0" Foreground="#A5B4FC" FontFamily="Bahnschrift Light" FontSize="11" TextWrapping="Wrap"/>

                    <Border x:Name="StatusBorder" Margin="0,10,0,0" CornerRadius="10" Padding="10" Background="#111827">
                        <TextBlock x:Name="StatusText" Foreground="#F97373" FontFamily="Bahnschrift Light" FontWeight="Bold" FontSize="12" TextWrapping="Wrap"/>
                    </Border>

                    <!-- BOTÓN SELECCIONAR OTRA CARPETA -->
                    <Button x:Name="SelectDifferentFolderButton" Content="📂 Not your folder? Select different one" Padding="10,6" Margin="0,50,0,0" Background="#6366F1" Foreground="White" FontWeight="Bold" FontFamily="Bahnschrift Light" FontSize="11" BorderThickness="0" Cursor="Hand" Click="SelectDifferentFolder_Click"/>

                    <!-- INPUT MANUAL -->
                    <GroupBox x:Name="ManualGroupBox" Header="Didn't find it? Tell me where your The Sims 4 documents are" Margin="0,12,0,0" Foreground="#E5E7EB" FontFamily="Bahnschrift Light" FontSize="11" Opacity="0">
                        <StackPanel Margin="4">
                            <TextBlock x:Name="ManualExampleText" Text="Example: C:\Users\YourUser\Documents\Electronic Arts\The Sims 4" Foreground="#9CA3AF" FontSize="10" TextWrapping="Wrap" Margin="0,0,0,4"/>
                            <DockPanel>
                                <Button x:Name="BrowseButton" Content="Browse..." Width="80" DockPanel.Dock="Right" Padding="4,2" Cursor="Hand" Background="#4B5563" Foreground="#E5E7EB" BorderThickness="0" Click="BrowseFolder_Click"/>
                                <TextBox x:Name="ManualPathTextBox" Margin="0,0,6,0" VerticalAlignment="Center" FontFamily="Bahnschrift Light" FontSize="11" Padding="4"/>
                            </DockPanel>
                            <Button x:Name="VerifyButton" Content="Verify &amp; create Mods folder" Margin="0,8,0,0" Padding="8,4" Background="#22C55E" Foreground="#022C22" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="VerifyManualPath_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>

            <!-- FOOTER -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="OpenModsFolderButton" Content="📁 Open Mods Folder" Padding="10,4" Margin="0,0,8,0" Background="#0891B2" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="OpenModsFolder_Click" Visibility="Collapsed"/>
                <Button x:Name="CloseMainButton" Content="Close" Padding="10,4" Background="#111827" Foreground="#E5E7EB" BorderThickness="0" Cursor="Hand" Click="Close_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>