<Window x:Class="ModernDesign.MVVM.View.PlugnPlaySelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Plug'n'Play Installer" 
        Height="650" Width="800"
        MinHeight="600" MinWidth="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock x:Name="HeaderText"
                           Text="🎮 Plug'n'Play Installation"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock x:Name="SubHeaderText"
                           Text="Choose your installation package"
                           FontSize="12"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- AntiDescarga Promotion -->
            <Border x:Name="AntiDescargaBanner" Grid.Row="1" Background="#1E40AF" CornerRadius="10" Padding="12" Margin="0,0,0,15"
                    BorderBrush="#3B82F6" BorderThickness="2" Cursor="Hand"
                    MouseLeftButtonDown="AntiDescargaPromo_Click">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.4" Color="#3B82F6"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="⚡" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="AntiDescargaText" 
                               Text="Skip Downloading Process - Click Here!"
                               FontSize="13" FontWeight="Bold" Foreground="White" 
                               VerticalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                    <TextBlock Text="⚡" FontSize="18" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Decorative Line -->
            <Border Grid.Row="2" Height="2" Background="#334155" CornerRadius="1" Margin="0,0,0,15"/>

            <!-- Options -->
            <Grid Grid.Row="3" Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Game Base + DLCs Option -->
                <Border Grid.Column="0" Background="#10FFFFFF" CornerRadius="12" Padding="20"
                        BorderBrush="#A78BFA" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#A78BFA"/>
                    </Border.Effect>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock Text="💎" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock x:Name="FullGameTitle" Text="Game Base + DLCs" FontSize="18" FontWeight="Bold" 
                                       Foreground="#A78BFA" HorizontalAlignment="Center" Margin="0,0,0,12"
                                       TextWrapping="Wrap" TextAlignment="Center"/>

                            <Border Background="#15FFFFFF" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock x:Name="FullGameSize" Text="📦 Required: ~140GB" 
                                               FontSize="11" Foreground="#FBBF24" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" Margin="0,0,0,4"
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                    <TextBlock x:Name="FullGameDesc" 
                                               Text="(Download + Extraction)"
                                               FontSize="9" Foreground="#94A3B8" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <TextBlock x:Name="FullGameFeatures" TextWrapping="Wrap" 
                                       FontSize="10" Foreground="#E5E7EB" TextAlignment="Center" 
                                       Margin="0,0,0,15" LineHeight="16">
                                <Run Text="✅ Complete game with ALL DLCs"/>
                                <LineBreak/>
                                <Run Text="✅ Ready to play instantly"/>
                                <LineBreak/>
                                <Run Text="✅ No additional downloads"/>
                            </TextBlock>

                            <Button x:Name="FullGameBtn" Content="Download Full Package" Height="42"
                                    Background="#A78BFA" Foreground="White" FontWeight="Bold"
                                    FontSize="12" Cursor="Hand" Click="FullGameBtn_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#8B5CF6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Game Base Only Option -->
                <Border Grid.Column="2" Background="#10FFFFFF" CornerRadius="12" Padding="20"
                        BorderBrush="#3EC7E8" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#3EC7E8"/>
                    </Border.Effect>

                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock Text="📦" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock x:Name="BaseGameTitle" Text="Game Base Only" FontSize="18" FontWeight="Bold" 
                                       Foreground="#3EC7E8" HorizontalAlignment="Center" Margin="0,0,0,12"
                                       TextWrapping="Wrap" TextAlignment="Center"/>

                            <Border Background="#15FFFFFF" CornerRadius="8" Padding="10" Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock x:Name="BaseGameSize" Text="📦 Required: ~40GB" 
                                               FontSize="11" Foreground="#22C55E" FontWeight="SemiBold" 
                                               HorizontalAlignment="Center" Margin="0,0,0,4"
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                    <TextBlock x:Name="BaseGameDesc" 
                                               Text="(Download + Extraction)"
                                               FontSize="9" Foreground="#94A3B8" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <TextBlock x:Name="BaseGameFeatures" TextWrapping="Wrap" 
                                       FontSize="10" Foreground="#E5E7EB" TextAlignment="Center" 
                                       Margin="0,0,0,15" LineHeight="16">
                                <Run Text="✅ Base game only"/>
                                <LineBreak/>
                                <Run Text="✅ Smaller download size"/>
                                <LineBreak/>
                                <Run Text="✅ Add DLCs later with toolkit"/>
                            </TextBlock>

                            <Button x:Name="BaseGameBtn" Content="Download Base Game" Height="42"
                                    Background="#3EC7E8" Foreground="White" FontWeight="Bold"
                                    FontSize="12" Cursor="Hand" Click="BaseGameBtn_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                                CornerRadius="8" Padding="12,8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="bg" Property="Background" Value="#0EA5E9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>

            <!-- Close Button -->
            <Button x:Name="CloseBtn" Grid.Row="4" Content="❌ Close" Height="38" Margin="0,15,0,0"
                    Background="#30FFFFFF" Foreground="White" FontWeight="SemiBold"
                    FontSize="13" Cursor="Hand" Click="CloseBtn_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="15,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>