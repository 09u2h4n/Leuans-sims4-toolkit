<Window x:Class="ModernDesign.MVVM.View.CreateAlbumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Album"
        Width="900"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize"
        MinWidth="700"
        MinHeight="500">

    <Window.Resources>
        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.9"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4B5563"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CreateButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#22C55E"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#16A34A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PhotoCheckCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="200"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#0F172A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Grid Grid.Row="0" Margin="30,20,30,20">
                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="📁 Create Album" Style="{StaticResource TitleTextBlock}" FontSize="28"/>
                    <TextBlock x:Name="SubtitleText" Text="Select photos to add to your new album" Style="{StaticResource BodyTextBlock}" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <Button Content="✕" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="32"
                        Height="32"
                        FontSize="16"
                        Style="{StaticResource CloseButtonStyle}"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- ALBUM NAME INPUT -->
            <Border Grid.Row="1" Background="#1E293B" CornerRadius="12" Margin="30,0,30,20" Padding="20">
                <StackPanel>
                    <TextBlock x:Name="AlbumNameLabel" Text="Album Name:" Style="{StaticResource BodyTextBlock}" FontSize="14" Margin="0,0,0,10"/>
                    <TextBox x:Name="AlbumNameTextBox"
                             Background="#0F172A"
                             Foreground="#F9FAFB"
                             BorderBrush="#334155"
                             BorderThickness="2"
                             Padding="12,10"
                             FontSize="14"
                             FontFamily="Bahnschrift Light"
                             FontWeight="Bold">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#6366F1"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>
            </Border>

            <!-- PHOTOS GRID -->
            <Border Grid.Row="2" Background="#1E293B" CornerRadius="12" Margin="30,0,30,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- TOOLBAR -->
                    <Border Grid.Row="0" Background="#0F172A" CornerRadius="12,12,0,0" Padding="20,15">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <CheckBox x:Name="SelectAllCheckBox"
                                          Content="Select All"
                                          Foreground="#F9FAFB"
                                          FontFamily="Bahnschrift Light"
                                          FontWeight="Bold"
                                          FontSize="13"
                                          Checked="SelectAllCheckBox_Checked"
                                          Unchecked="SelectAllCheckBox_Unchecked"/>
                            </StackPanel>

                            <TextBlock x:Name="SelectedCountText" 
                                       Text="0 selected" 
                                       Style="{StaticResource BodyTextBlock}" 
                                       FontSize="13" 
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- SCROLLABLE PHOTOS -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Disabled"
                                  Padding="10">
                        <WrapPanel x:Name="PhotosWrapPanel" HorizontalAlignment="Center"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- FOOTER BUTTONS -->
            <Border Grid.Row="3" Margin="30,0,30,30">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Style="{StaticResource CancelButtonStyle}"
                            Margin="0,0,15,0"
                            MinWidth="120"
                            Click="CancelButton_Click"/>

                    <Button x:Name="CreateButton"
                            Content="Create Album"
                            Style="{StaticResource CreateButtonStyle}"
                            MinWidth="150"
                            Click="CreateButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>