<Window x:Class="ModernDesign.MVVM.View.MedalDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial Complete"
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MedalButton" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#334155"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="20" Background="#0F172A" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.6"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="🎉 Tutorial Completed!"
                           x:Name="TitleText"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
                <TextBlock x:Name="SubtitleText"
                           Text="Rate your understanding"
                           FontSize="14"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Medal Selection -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Bronze -->
                <Button x:Name="BronzeButton"
                        Style="{StaticResource MedalButton}"
                        BorderBrush="#CD7F32"
                        Click="BronzeButton_Click">
                    <StackPanel>
                        <TextBlock Text="🥉" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="BronzeText"
                                   Text="Bronze"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#CD7F32"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="BronzeDesc"
                                   Text="Basic understanding"
                                   FontSize="10"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Silver -->
                <Button x:Name="SilverButton"
                        Style="{StaticResource MedalButton}"
                        BorderBrush="#C0C0C0"
                        Click="SilverButton_Click">
                    <StackPanel>
                        <TextBlock Text="🥈" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="SilverText"
                                   Text="Silver"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#C0C0C0"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="SilverDesc"
                                   Text="Good grasp"
                                   FontSize="10"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>

                <!-- Gold -->
                <Button x:Name="GoldButton"
                        Style="{StaticResource MedalButton}"
                        BorderBrush="#FFD700"
                        Click="GoldButton_Click">
                    <StackPanel>
                        <TextBlock Text="🥇" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="GoldText"
                                   Text="Gold"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#FFD700"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <TextBlock x:Name="GoldDesc"
                                   Text="Mastered it!"
                                   FontSize="10"
                                   Foreground="#94A3B8"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <TextBlock x:Name="HintText"
                           Text="💡 You can always retake the tutorial to improve your medal"
                           FontSize="11"
                           Foreground="#64748B"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <Button x:Name="SkipButton"
                        Content="Skip (No medal)"
                        Width="150"
                        Height="35"
                        Background="#475569"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        Cursor="Hand"
                        HorizontalAlignment="Center"
                        Click="SkipButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="12,8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>