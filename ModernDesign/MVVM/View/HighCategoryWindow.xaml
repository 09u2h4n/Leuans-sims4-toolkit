<Window x:Class="ModernDesign.MVVM.View.HighCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="High-Level Modding Categories"
        Height="620" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.04" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.04" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LessonCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText"
                       Text="🧠 High-Level Modding Categories"
                       Style="{StaticResource TitleStyle}"
                       FontSize="22"/>
            <TextBlock x:Name="SubtitleText"
                       Text="Advanced systems, custom frameworks and scripting workflows."
                       Style="{StaticResource BodyStyle}"
                       FontSize="12"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- MAIN AREA -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: CATEGORY LIST -->
            <Border Grid.Column="0" Background="#020617" CornerRadius="12" Padding="10" Margin="0,0,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>

                        <!-- Frameworks de gameplay -->
                        <Border x:Name="CardFrameworks"
                                Style="{StaticResource CategoryCard}"
                                Tag="frameworks"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="🧩" FontSize="20"/>
                                <TextBlock x:Name="CardFrameworksTitle"
                                           Text="Gameplay Frameworks"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardFrameworksDesc"
                                           Text="Sistemas que otros mods pueden reutilizar."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Eventos y situaciones complejas -->
                        <Border x:Name="CardEvents"
                                Style="{StaticResource CategoryCard}"
                                Tag="events"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="📆" FontSize="20"/>
                                <TextBlock x:Name="CardEventsTitle"
                                           Text="Events &amp; Situations"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardEventsDesc"
                                           Text="Eventos, situaciones y sistemas temporales avanzados."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Integración Python -->
                        <Border x:Name="CardPython"
                                Style="{StaticResource CategoryCard}"
                                Tag="python"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="💻" FontSize="20"/>
                                <TextBlock x:Name="CardPythonTitle"
                                           Text="Python Integration"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardPythonDesc"
                                           Text="Comunicación entre tuning y scripts complejos."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Proyectos grandes -->
                        <Border x:Name="CardProjects"
                                Style="{StaticResource CategoryCard}"
                                Tag="projects"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="🏗️" FontSize="20"/>
                                <TextBlock x:Name="CardProjectsTitle"
                                           Text="Large-Scale Projects"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardProjectsDesc"
                                           Text="Cómo planear, versionar y publicar mods grandes."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: LESSONS -->
            <Border Grid.Column="1" Background="#020617" CornerRadius="12" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="CategoryTitleText"
                                   Text="Gameplay Frameworks"
                                   Style="{StaticResource TitleStyle}"
                                   FontSize="18"/>
                        <TextBlock x:Name="CategoryIntroText"
                                   Text="Design reusable systems that other mods – or your future self – can build on."
                                   Style="{StaticResource BodyStyle}"
                                   FontSize="12"
                                   Margin="0,4,0,10"/>

                        <StackPanel x:Name="LessonsPanel"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="CloseButton"
                    Content="Close"
                    Padding="14,6"
                    Background="#374151"
                    Foreground="#E5E7EB"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
