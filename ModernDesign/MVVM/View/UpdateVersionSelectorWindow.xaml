<Window x:Class="ModernDesign.MVVM.View.UpdateVersionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Version Selector" 
        Height="600" Width="700"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Window.Resources>
        <Style x:Key="VersionButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#15FFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="30,40">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock x:Name="icon" Text="{TemplateBinding Tag}" 
                                           FontSize="48" HorizontalAlignment="Center" 
                                           Margin="0,0,0,15"/>
                                <TextBlock x:Name="title" Text="{TemplateBinding Content}" 
                                           FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBlock x:Name="subtitle" 
                                           Foreground="#94A3B8" 
                                           FontSize="11"
                                           HorizontalAlignment="Center" 
                                           TextWrapping="Wrap" TextAlignment="Center"
                                           MaxWidth="280"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#25FFFFFF"/>
                                <Setter TargetName="icon" Property="Foreground" Value="#3EC7E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,40">
                <TextBlock Text="🔄 Selecciona tu versión" 
                           x:Name="HeaderText"
                           Foreground="White" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Elige la versión de tu juego" 
                           x:Name="SubHeaderText"
                           Foreground="#94A3B8" 
                           FontSize="13" 
                           HorizontalAlignment="Center" 
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Version Buttons -->
            <Grid Grid.Row="1" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Leuan's Version Button -->
                <Button x:Name="LeuanVersionBtn" 
                        Grid.Column="0"
                        Content="Leuan's Version"
                        Tag="✨"
                        Style="{StaticResource VersionButton}"
                        Click="LeuanVersionBtn_Click"/>

                <!-- Other Versions Button -->
                <Button x:Name="OtherVersionsBtn" 
                        Grid.Column="2"
                        Content="Other Versions"
                        Tag="📁"
                        Style="{StaticResource VersionButton}"
                        Click="OtherVersionsBtn_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>