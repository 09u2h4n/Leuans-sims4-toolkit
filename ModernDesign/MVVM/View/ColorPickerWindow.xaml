<Window x:Class="ModernDesign.MVVM.View.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Background Color"
        Width="500" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="#1E293B" CornerRadius="16" Padding="25">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="🎨 Customize Background" 
                           FontSize="22" FontWeight="Bold" Foreground="White" 
                           FontFamily="Bahnschrift Light" HorizontalAlignment="Center"/>
                <TextBlock Text="Choose 3 colors for your gradient background" 
                           FontSize="12" Foreground="#94A3B8" 
                           FontFamily="Bahnschrift Light" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Color Pickers -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- COLOR 1 -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Color 1 (Top Left)" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Red" Foreground="#EF4444" FontSize="11" Margin="0,0,0,3"/>
                                    <Slider x:Name="R1Slider" Minimum="0" Maximum="255" Value="34" 
                                            ValueChanged="Color1_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Green" Foreground="#22C55E" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="G1Slider" Minimum="0" Maximum="255" Value="211" 
                                            ValueChanged="Color1_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Blue" Foreground="#3B82F6" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="B1Slider" Minimum="0" Maximum="255" Value="238" 
                                            ValueChanged="Color1_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <Border Grid.Column="1" x:Name="Preview1" CornerRadius="8" Height="80">
                                    <Border.Background>
                                        <SolidColorBrush Color="#22D3EE"/>
                                    </Border.Background>
                                    <TextBlock x:Name="Hex1Text" Text="#22D3EE" 
                                               Foreground="White" FontSize="10" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Background="#40000000" Padding="5,2" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- COLOR 2 -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Color 2 (Middle)" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Red" Foreground="#EF4444" FontSize="11" Margin="0,0,0,3"/>
                                    <Slider x:Name="R2Slider" Minimum="0" Maximum="255" Value="30" 
                                            ValueChanged="Color2_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Green" Foreground="#22C55E" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="G2Slider" Minimum="0" Maximum="255" Value="41" 
                                            ValueChanged="Color2_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Blue" Foreground="#3B82F6" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="B2Slider" Minimum="0" Maximum="255" Value="59" 
                                            ValueChanged="Color2_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <Border Grid.Column="1" x:Name="Preview2" CornerRadius="8" Height="80">
                                    <Border.Background>
                                        <SolidColorBrush Color="#1E293B"/>
                                    </Border.Background>
                                    <TextBlock x:Name="Hex2Text" Text="#1E293B" 
                                               Foreground="White" FontSize="10" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Background="#40000000" Padding="5,2"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- COLOR 3 -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Color 3 (Bottom Right)" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Red" Foreground="#EF4444" FontSize="11" Margin="0,0,0,3"/>
                                    <Slider x:Name="R3Slider" Minimum="0" Maximum="255" Value="33" 
                                            ValueChanged="Color3_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Green" Foreground="#22C55E" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="G3Slider" Minimum="0" Maximum="255" Value="185" 
                                            ValueChanged="Color3_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>

                                    <TextBlock Text="Blue" Foreground="#3B82F6" FontSize="11" Margin="0,8,0,3"/>
                                    <Slider x:Name="B3Slider" Minimum="0" Maximum="255" Value="107" 
                                            ValueChanged="Color3_Changed" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                </StackPanel>

                                <Border Grid.Column="1" x:Name="Preview3" CornerRadius="8" Height="80">
                                    <Border.Background>
                                        <SolidColorBrush Color="#21b96b"/>
                                    </Border.Background>
                                    <TextBlock x:Name="Hex3Text" Text="#21b96b" 
                                               Foreground="White" FontSize="10" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Background="#40000000" Padding="5,2"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- PREVIEW FINAL -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Final Preview" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
                            <Border x:Name="FinalPreview" Height="100" CornerRadius="12">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop x:Name="FinalGrad1" Color="#22D3EE" Offset="0"/>
                                        <GradientStop x:Name="FinalGrad2" Color="#1E293B" Offset="0.45"/>
                                        <GradientStop x:Name="FinalGrad3" Color="#21b96b" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <TextBlock Text="Your Custom Background" 
                                           Foreground="White" FontSize="16" FontWeight="Bold"
                                           HorizontalAlignment="Center" VerticalAlignment="Center">

                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="ResetButton" Content="🔄 Reset" Padding="15,10" Margin="0,0,10,0" 
                        Background="#475569" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand" Click="ResetButton_Click" FontFamily="Bahnschrift Light"/>
                <Button x:Name="CancelButton" Content="Cancel" Padding="15,10" Margin="0,0,10,0" 
                        Background="#334155" Foreground="White" BorderThickness="0" 
                        Cursor="Hand" Click="CancelButton_Click" FontFamily="Bahnschrift Light"/>
                <Button x:Name="ApplyButton" Content="✓ Apply" Padding="15,10" 
                        Background="#22C55E" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand" Click="ApplyButton_Click" FontFamily="Bahnschrift Light"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>