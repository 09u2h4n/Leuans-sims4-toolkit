<UserControl x:Class="ModernDesign.MVVM.View.UserProfileCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Estilo para las tarjetas de categoría -->
        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.02" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.02" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para los tutoriales individuales -->
        <Style x:Key="TutorialItem" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Estilo para opciones deshabilitadas -->
        <Style x:Key="DisabledOption" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Opacity" Value="0.4"/>
        </Style>

        <!-- Estilo para opciones habilitadas -->
        <Style x:Key="EnabledOption" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#334155"/>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.01" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.01" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.1"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="#1E293B"
            CornerRadius="16"
            Padding="0"
            MinWidth="400"
            MinHeight="500"
            Width="500"
            Height="650">
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ==================== HEADER CON BANNER ==================== -->
            <Grid Grid.Row="0">
                <!-- Banner degradado -->
                <Border Height="120" CornerRadius="16,16,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#7C3AED" Offset="0"/>
                            <GradientStop Color="#4F46E5" Offset="0.5"/>
                            <GradientStop Color="#22D3EE" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Avatar y User Info -->
                <Grid Margin="25,60,25,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Avatar grande con borde -->
                    <Border Grid.Column="0"
                            Width="90"
                            Height="90"
                            CornerRadius="45"
                            BorderThickness="5"
                            BorderBrush="White"
                            VerticalAlignment="Top" Margin="0,-51,0,0">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#22D3EE" Offset="0"/>
                                <GradientStop Color="#21b96b" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock x:Name="AvatarEmoji"
                                   Text="👤"
                                   FontSize="48"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- User Info -->
                    <StackPanel Grid.Column="1" 
                                Margin="18,30,0,0"
                                VerticalAlignment="Top">
                        <TextBlock x:Name="UserNameText"
                                   Text="User Name"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontFamily="Bahnschrift Light" Margin="0,-60,0,0"/>
                        <TextBlock x:Name="UserTitleText"
                                   Text="🏆 Modding Apprentice"
                                   FontSize="13"
                                   Foreground="#A78BFA"
                                   FontFamily="Bahnschrift Light"
                                   Margin="0,-20,0,0"/>
                        <TextBlock x:Name="MemberSinceText"
                                   Text="Member since: Jan 2025"
                                   FontSize="11"
                                   Foreground="#94A3B8"
                                   FontFamily="Bahnschrift Light"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- ==================== CONTENIDO CON SCROLL ==================== -->
            <ScrollViewer Grid.Row="1" 
                          VerticalScrollBarVisibility="Auto"
                          Margin="25,15,25,0">
                <StackPanel>
                    <!-- RESUMEN DE MEDALLAS -->
                    <Border Background="#0F172A"
                            CornerRadius="12"
                            Padding="18"
                            Margin="0,0,0,18">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2" Color="#000000"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Gold -->
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock x:Name="GoldEmoji"
                                           Text="🥇"
                                           FontSize="36"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="GoldCount"
                                           Text="0"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#FFD700"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,3"/>
                                <TextBlock x:Name="GoldLabel"
                                           Text="Gold"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Silver -->
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock x:Name="SilverEmoji"
                                           Text="🥈"
                                           FontSize="36"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#C0C0C0" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="SilverCount"
                                           Text="0"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#C0C0C0"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,3"/>
                                <TextBlock x:Name="SilverLabel"
                                           Text="Silver"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Bronze -->
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock x:Name="BronzeEmoji"
                                           Text="🥉"
                                           FontSize="36"
                                           HorizontalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#CD7F32" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                                <TextBlock x:Name="BronzeCount"
                                           Text="0"
                                           FontSize="28"
                                           FontWeight="Bold"
                                           Foreground="#CD7F32"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,3"/>
                                <TextBlock x:Name="BronzeLabel"
                                           Text="Bronze"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- TÍTULO DE CATEGORÍAS -->
                    <TextBlock x:Name="CategoriesTitle"
                               Text="📚 Categories"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               FontFamily="Bahnschrift Light"
                               Margin="0,0,0,10"/>

                    <!-- CATEGORÍA: MODDING -->
                    <Border x:Name="ModdingCategoryCard"
                            Style="{StaticResource CategoryCard}"
                            MouseLeftButtonUp="ModdingCategory_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icono con color -->
                            <TextBlock x:Name="ModdingCategoryIcon"
                                       Grid.Column="0"
                                       Text="🛠️"
                                       FontSize="28"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#22D3EE" BlurRadius="12" ShadowDepth="0" Opacity="0.7"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="ModdingCategoryName"
                                           Text="Modding"
                                           FontSize="15"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="ModdingCategoryProgress"
                                           Text="0/7 completed"
                                           FontSize="11"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Medalla de categoría -->
                            <TextBlock x:Name="ModdingCategoryMedal"
                                       Grid.Column="2"
                                       Text="—"
                                       FontSize="32"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- DETALLES DE MODDING (Expandible) -->
                    <StackPanel x:Name="ModdingDetailsPanel"
                                Visibility="Collapsed"
                                Margin="15,0,0,10">
                        <!-- Beginner's Guide -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_BeginnerGuide"
                                           Grid.Column="0"
                                           Text="🚀 Beginner's Guide"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_BeginnerGuide"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Trait -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Trait"
                                           Grid.Column="0"
                                           Text="⭐ Trait"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Trait"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Interaction -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Interaction"
                                           Grid.Column="0"
                                           Text="💬 Social Interaction"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Interaction"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Career -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Career"
                                           Grid.Column="0"
                                           Text="💼 Career"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Career"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Buff -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Buff"
                                           Grid.Column="0"
                                           Text="😊 Buff / Moodlet"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Buff"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Clothing -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Clothing"
                                           Grid.Column="0"
                                           Text="👗 Clothing"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Clothing"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Object -->
                        <Border Style="{StaticResource TutorialItem}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Tutorial_Object"
                                           Grid.Column="0"
                                           Text="🪑 Object / CC"
                                           FontSize="12"
                                           Foreground="#E5E7EB"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Medal_Object"
                                           Grid.Column="1"
                                           Text="—"
                                           FontSize="20"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- CATEGORÍA: DEVELOPER MODE -->
                    <Border x:Name="DeveloperCategoryCard"
        Style="{StaticResource CategoryCard}"
        MouseLeftButtonUp="DeveloperCategory_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icono con efecto amarillo -->
                            <TextBlock x:Name="DeveloperCategoryIcon"
                   Grid.Column="0"
                   Text="💻"
                   FontSize="28"
                   VerticalAlignment="Center"
                   Margin="0,0,12,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <!-- Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="DeveloperCategoryName"
                       Text="Developer Mode"
                       FontSize="15"
                       FontWeight="Bold"
                       Foreground="White"
                       FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="DeveloperCategoryStatus"
                       Text="🔒 Locked"
                       FontSize="11"
                       Foreground="#EF4444"
                       FontFamily="Bahnschrift Light"
                       Margin="0,2,0,0"/>
                            </StackPanel>

                            <!-- Botón de ayuda (?) -->
                            <Border x:Name="DeveloperHelpButton"
                Grid.Column="2"
                Width="24"
                Height="24"
                CornerRadius="12"
                Background="#F59E0B"
                Margin="0,0,8,0"
                Cursor="Hand"
                MouseLeftButtonUp="DeveloperHelp_Click">
                                <Border.Effect>
                                    <DropShadowEffect Color="#F59E0B" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                </Border.Effect>
                                <TextBlock Text="?"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>

                            <!-- Estado (candado con efecto amarillo) -->
                            <TextBlock x:Name="DeveloperCategoryLock"
                   Grid.Column="3"
                   Text="🔒"
                   FontSize="28"
                   VerticalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#F59E0B" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- DETALLES DE DEVELOPER MODE (Expandible) -->
                    <StackPanel x:Name="DeveloperDetailsPanel"
                                Visibility="Collapsed"
                                Margin="15,0,0,10">
                        <!-- Change Background -->
                        <Border x:Name="Option_ChangeBackground"
                                Style="{StaticResource DisabledOption}"
                                MouseLeftButtonUp="ChangeBackground_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Option_ChangeBackgroundText"
                                           Grid.Column="0"
                                           Text="🎨 Cambiar fondo de background general"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Option_ChangeBackgroundLock"
                                           Grid.Column="1"
                                           Text="🔒"
                                           FontSize="16"
                                           Foreground="#94A3B8"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Change Avatar -->
                        <Border x:Name="Option_ChangeAvatar"
                                Style="{StaticResource DisabledOption}"
                                MouseLeftButtonUp="ChangeAvatar_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Option_ChangeAvatarText"
                                           Grid.Column="0"
                                           Text="👤 Cambiar Avatar"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Option_ChangeAvatarLock"
                                           Grid.Column="1"
                                           Text="🔒"
                                           FontSize="16"
                                           Foreground="#94A3B8"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Create Translation -->
                        <Border x:Name="Option_CreateTranslation"
                                Style="{StaticResource DisabledOption}"
                                MouseLeftButtonUp="CreateTranslation_Click">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="Option_CreateTranslationText"
                                           Grid.Column="0"
                                           Text="🌐 Crear Traducción"
                                           FontSize="12"
                                           Foreground="#94A3B8"
                                           FontFamily="Bahnschrift Light"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="Option_CreateTranslationLock"
                                           Grid.Column="1"
                                           Text="🔒"
                                           FontSize="16"
                                           Foreground="#94A3B8"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Progress Text -->
                    <Border Background="#0F172A"
                            CornerRadius="10"
                            Padding="12"
                            Margin="0,10,0,0">
                        <TextBlock x:Name="ProgressText"
                                   Text="Complete tutorials to earn medals!"
                                   FontSize="12"
                                   Foreground="#94A3B8"
                                   FontFamily="Bahnschrift Light"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ==================== FOOTER CON BOTÓN CERRAR ==================== -->
            <Border Grid.Row="2"
                    Background="#0F172A"
                    CornerRadius="0,0,16,16"
                    Padding="25,15">
                <Button x:Name="CloseButton"
                        Content="✕ Close"
                        Padding="12,10"
                        Background="#334155"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="13"
                        FontFamily="Bahnschrift Light"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#475569"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</UserControl>