<Window x:Class="ModernDesign.MVVM.View.OrganizeMusicView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Organize Music"
        Width="900"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="TitleTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="BodyTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EF4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="16" Background="#0F172A">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <!-- HEADER -->
            <Grid VerticalAlignment="Top" Margin="30,20,30,0" Height="70">
                <StackPanel>
                    <TextBlock x:Name="TitleText" Text="📂 Organize Music" Style="{StaticResource TitleTextBlock}" FontSize="24"/>
                    <TextBlock x:Name="SubtitleText" Text="Drag songs to folders to organize them" Style="{StaticResource BodyTextBlock}" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="CloseButton"
                        Content="✕" 
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Top"
                        Width="32"
                        Height="32"
                        Style="{StaticResource CloseButtonStyle}"
                        FontSize="16"
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- CONTENT -->
            <Grid Margin="30,100,30,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- FOLDERS -->
                <Border Grid.Column="0" Background="#1E293B" CornerRadius="12" Padding="20">
                    <Grid>
                        <TextBlock Text="📁 Carpetas" Style="{StaticResource TitleTextBlock}" FontSize="16" VerticalAlignment="Top" Margin="0,0,0,15"/>

                        <ScrollViewer Margin="0,35,0,0" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="FoldersPanel"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- FILES -->
                <Border Grid.Column="2" Background="#1E293B" CornerRadius="12" Padding="20">
                    <Grid>
                        <TextBlock Text="🎵 Canciones" Style="{StaticResource TitleTextBlock}" FontSize="16" VerticalAlignment="Top" Margin="0,0,0,15"/>

                        <ScrollViewer Margin="0,35,0,0" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="FilesPanel"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>