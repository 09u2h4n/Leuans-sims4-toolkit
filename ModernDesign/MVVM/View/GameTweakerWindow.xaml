<Window x:Class="ModernDesign.MVVM.View.GameTweakerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Tweaker"
        Height="550" Width="900"
        MinHeight="500" MinWidth="900"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
        </Style>
        <Style x:Key="SettingCard" TargetType="Border">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="HiddenScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <ScrollContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="⚙️ Game Tweaker" Style="{StaticResource TitleStyle}" FontSize="26"/>
            <TextBlock x:Name="SubtitleText" Text="Advanced Options.ini editor" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- PATH SELECTOR -->
        <Border Grid.Row="1" Background="#111827" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" x:Name="PathLabel" Text="Options.ini:" Style="{StaticResource BodyStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Column="1" x:Name="OptionsPathTextBox" Background="#1E293B" Foreground="#E5E7EB" BorderThickness="0" Padding="8" FontFamily="Bahnschrift Light" IsReadOnly="True" VerticalAlignment="Center"/>
                <Button Grid.Column="2" x:Name="BrowseButton" Content="📁 Browse" Padding="12,6" Margin="10,0,0,0" Background="#7C3AED" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="BrowseButton_Click"/>
                <Button Grid.Column="3" x:Name="RestoreButton" Content="🔄 Restore" Padding="10,6" Margin="10,0,0,0" Background="#DC2626" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="RestoreButton_Click" ToolTip="Restore from backup"/>
            </Grid>
        </Border>

        <!-- SETTINGS SCROLL -->
        <ScrollViewer Grid.Row="2" Style="{StaticResource HiddenScrollViewer}">
            <StackPanel x:Name="SettingsPanel">
                <!-- Settings will be loaded dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- FOOTER -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SaveButton" Content="💾 Save Changes" Padding="16,8" Margin="0,0,8,0" Background="#10B981" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="SaveButton_Click"/>
            <Button x:Name="ReloadButton" Content="🔄 Reload" Padding="16,8" Margin="0,0,8,0" Background="#F59E0B" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="ReloadButton_Click"/>
            <Button x:Name="CloseButton" Content="Close" Padding="16,8" Background="#374151" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>