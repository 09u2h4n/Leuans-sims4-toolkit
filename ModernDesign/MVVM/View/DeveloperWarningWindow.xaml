<Window x:Class="ModernDesign.MVVM.View.DeveloperWarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Developer Mode"
        Width="500" Height="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="#1E293B" CornerRadius="16" Padding="30">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.6" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con icono animado -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="⚠️" FontSize="64" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#F59E0B" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="TitleText" Text="Access Denied" 
                           FontSize="24" FontWeight="Bold" Foreground="White" 
                           FontFamily="Bahnschrift Light" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Mensaje -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="MessageText" TextWrapping="Wrap" 
                               Foreground="#E5E7EB" FontSize="14" 
                               FontFamily="Bahnschrift Light" LineHeight="22" TextAlignment="Center">
                        <Run Text="Oh oh! Al parecer no eres un Developer real y has hecho alguna especie de trampa para desbloquear este modo... " Foreground="#F59E0B" FontWeight="Bold"/>
                        <Run Text="😏"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="¡Te invitamos a convertirte en Developer REAL solo donando "/>
                        <Run Text="$1 USD" Foreground="#22C55E" FontWeight="Bold" FontSize="16"/>
                        <Run Text="! 💰"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="$1 USD... " FontWeight="Bold"/>
                        <Run Text="¡¡¡NO ES NADA!!!" Foreground="#EF4444" FontWeight="Bold" FontSize="15"/>
                        <Run Text=" para todo lo que te ofrezco con esta hermosa herramienta. ✨"/>
                        <LineBreak/><LineBreak/>
                        <Run Text="¿Quieres apoyar el desarrollo? 💖" FontStyle="Italic" Foreground="#A78BFA"/>
                    </TextBlock>

                    <!-- Progress Details -->
                    <Border x:Name="ProgressPanel" Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,15,0,0">
                        <StackPanel>
                            <TextBlock Text="📊 Tu Progreso para Desbloquear:" 
                   Foreground="#22C55E" FontWeight="Bold" FontSize="13" 
                   FontFamily="Bahnschrift Light" Margin="0,0,0,10"/>

                            <StackPanel x:Name="ProgressItems">
                                <!-- Se llenará dinámicamente desde code-behind -->
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <!-- Features que se desbloquean -->
                    <Border Background="#0F172A" CornerRadius="12" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🎁 Con tu donación desbloqueas:" 
                                       Foreground="#22C55E" FontWeight="Bold" FontSize="13" 
                                       FontFamily="Bahnschrift Light" Margin="0,0,0,10"/>
                            <TextBlock Text="✓ Cambiar colores del background" Foreground="#94A3B8" FontSize="12" Margin="0,3,0,0"/>
                            <TextBlock Text="✓ Personalizar tu avatar" Foreground="#94A3B8" FontSize="12" Margin="0,3,0,0"/>
                            <TextBlock Text="✓ Crear traducciones personalizadas" Foreground="#94A3B8" FontSize="12" Margin="0,3,0,0"/>
                            <TextBlock Text="✓ Acceso a futuras funciones exclusivas" Foreground="#94A3B8" FontSize="12" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                <Button x:Name="DonateButton" Content="💖 Donar $1 USD" Padding="20,12" Margin="0,0,15,0" 
                        Background="#22C55E" Foreground="White" FontWeight="Bold" FontSize="14"
                        BorderThickness="0" Cursor="Hand" Click="DonateButton_Click" FontFamily="Bahnschrift Light">
                    <Button.Effect>
                        <DropShadowEffect Color="#22C55E" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                    </Button.Effect>
                </Button>
                <Button x:Name="CloseButton" Content="Cerrar" Padding="20,12" 
                        Background="#334155" Foreground="White" BorderThickness="0" 
                        Cursor="Hand" Click="CloseButton_Click" FontFamily="Bahnschrift Light"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>