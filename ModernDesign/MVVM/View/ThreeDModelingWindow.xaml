<Window x:Class="ModernDesign.MVVM.View.ThreeDModelingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Modeling Hub"
        Height="628" Width="966"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style x:Key="TabButton" TargetType="Button">
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style x:Key="GuideCard" TargetType="Border">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.03" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.03" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText" Text="🎭 3D Modeling Hub" Style="{StaticResource TitleStyle}" FontSize="24"/>
            <TextBlock x:Name="SubtitleText" Text="Learn to create custom 3D meshes with Blender" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- TAB BUTTONS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button x:Name="TabGettingStarted" Content="🚀 Getting Started" Style="{StaticResource TabButton}" Background="#7C3AED" Foreground="White" Click="TabGettingStarted_Click"/>
            <Button x:Name="TabTools" Content="🛠️ Tools &amp; Setup" Style="{StaticResource TabButton}" Background="#1E293B" Foreground="#E5E7EB" Click="TabTools_Click"/>
            <Button x:Name="TabGuides" Content="📚 Guides &amp; Tutorials" Style="{StaticResource TabButton}" Background="#1E293B" Foreground="#E5E7EB" Click="TabGuides_Click"/>
        </StackPanel>

        <!-- CONTENT AREA -->
        <Border Grid.Row="2" Background="#111827" CornerRadius="12">
            <Grid>
                <!-- TAB 1: Getting Started -->
                <ScrollViewer x:Name="TabGettingStartedContent" VerticalScrollBarVisibility="Auto" Visibility="Visible" HorizontalAlignment="Center">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="GettingStartedTitle" Text="🚀 Getting Started with 3D Modeling" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="GettingStartedDesc" Text="Follow these steps to start creating 3D content for The Sims 4" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <!-- Step Cards -->
                        <WrapPanel>
                            <Border x:Name="Step1Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Step1Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#EA580C" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="1" FontSize="28" FontWeight="Bold" Foreground="#FDBA74" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="Step1Title" Text="Download Blender" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="Step1Desc" Text="Get Blender 3.x or higher (free and open source)" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="Step2Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Step2Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#22C55E" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="2" FontSize="28" FontWeight="Bold" Foreground="#86EFAC" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="Step2Title" Text="Install S4S Blender Plugin" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="Step2Desc" Text="CAS TOOLS... Essential addon for importing/exporting Sims 4 meshes" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>

                            <Border x:Name="Step3Card" Width="240" Height="140" CornerRadius="12" Style="{StaticResource GuideCard}" Margin="0,0,15,15" MouseLeftButtonUp="Step3Card_Click">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#38BDF8" Offset="0"/>
                                        <GradientStop Color="#0F172A" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                                <StackPanel Margin="15" VerticalAlignment="Center">
                                    <TextBlock Text="3" FontSize="28" FontWeight="Bold" Foreground="#7DD3FC" FontFamily="Bahnschrift Light"/>
                                    <TextBlock x:Name="Step3Title" Text="Learn Blender Basics" Style="{StaticResource TitleStyle}" FontSize="14"/>
                                    <TextBlock x:Name="Step3Desc" Text="Master basic 3D modeling techniques" Style="{StaticResource BodyStyle}" FontSize="10"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <Button x:Name="OpenBlenderTutorialsButton" Content="📚 View Full Tutorial List" Padding="16,12" Margin="0,37,0,0" Background="#EA580C" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand" Click="OpenBlenderTutorials_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- TAB 2: Tools & Setup -->
                <ScrollViewer x:Name="TabToolsContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="ToolsTitle" Text="🛠️ Essential Tools &amp; Setup" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="ToolsDesc" Text="Everything you need to start 3D modeling for The Sims 4" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Blender" Foreground="#EA580C" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="BlenderInfo" Text="Free 3D creation suite. Download version 3.0 or higher from blender.org" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Sims 4 Studio Blender Tools" Foreground="#22C55E" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="S4SPluginInfo" Text="Plugin to import/export .blend files to Sims 4 format. Available on sims4studio.com" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#1E293B" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="Sims 4 Studio (Main Program)" Foreground="#38BDF8" FontWeight="Bold" FontSize="14" FontFamily="Bahnschrift Light"/>
                                <TextBlock x:Name="S4SMainInfo" Text="To pack your 3D models into .package files and add them to the game" Style="{StaticResource BodyStyle}" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#7F1D1D" CornerRadius="10" Padding="15" Margin="0,10,0,0">
                            <TextBlock x:Name="SetupWarning" Text="⚠️ Important: Make sure Blender and the S4S plugin versions are compatible!" Style="{StaticResource BodyStyle}" FontSize="11" Foreground="#FCA5A5"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>

                <!-- TAB 3: Guides & Tutorials -->
                <ScrollViewer x:Name="TabGuidesContent" VerticalScrollBarVisibility="Auto" Visibility="Collapsed">
                    <StackPanel Margin="20">
                        <TextBlock x:Name="GuidesTitle" Text="📚 Guides &amp; Tutorials" Style="{StaticResource TitleStyle}" FontSize="18" Margin="0,0,0,10"/>
                        <TextBlock x:Name="GuidesDesc" Text="Video tutorials and documentation to master 3D modeling" Style="{StaticResource BodyStyle}" FontSize="12" Margin="0,0,0,20"/>

                        <TextBlock x:Name="VideoSection" Text="🎬 Video Tutorials" Style="{StaticResource TitleStyle}" FontSize="14" Foreground="#F97316" Margin="0,0,0,10"/>
                        <ItemsControl x:Name="VideosList"/>

                        <TextBlock x:Name="DocsSection" Text="📄 Documentation" Style="{StaticResource TitleStyle}" FontSize="14" Foreground="#22D3EE" Margin="0,20,0,10"/>
                        <ItemsControl x:Name="DocsList"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- FOOTER -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="DownloadBlenderButton" Content="⬇️ Download Blender" Padding="12,6" Margin="0,0,8,0" Background="#EA580C" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="DownloadBlender_Click"/>
            <Button x:Name="CloseButton" Content="Close" Padding="12,6" Background="#374151" Foreground="White" BorderThickness="0" Cursor="Hand" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>