<Window x:Class="ModernDesign.MVVM.View.InstallMethodSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Installation Method" 
        Height="500" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock x:Name="HeaderText"
                           Text="🎮 Choose Your Installation Method"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="SubHeaderText"
                           Text="Select how you want to install The Sims 4"
                           FontSize="13"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Decorative Line -->
            <Border Grid.Row="1" Height="2" Background="#334155" CornerRadius="1" Margin="0,0,0,30"/>

            <!-- Options -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Legit Option -->
                <Border Grid.Column="0" Background="#10FFFFFF" CornerRadius="12" Padding="20"
                        BorderBrush="#22C55E" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#22C55E"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="✅" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock x:Name="LegitTitle" Text="Legit Copy" FontSize="20" FontWeight="Bold" 
                                   Foreground="#22C55E" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="LegitDescription" 
                                   Text="I have or want to buy the game from Steam or EA App"
                                   FontSize="12" Foreground="#E5E7EB" TextWrapping="Wrap" 
                                   TextAlignment="Center" Margin="0,0,0,20"/>

                        <Button x:Name="LegitBtn" Content="Choose Legit" Height="45"
                                Background="#22C55E" Foreground="White" FontWeight="Bold"
                                FontSize="14" Cursor="Hand" Click="LegitBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                            CornerRadius="8" Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#16A34A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- Cracked Option -->
                <Border Grid.Column="2" Background="#10FFFFFF" CornerRadius="12" Padding="20"
                        BorderBrush="#3EC7E8" BorderThickness="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.3" Color="#3EC7E8"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="🔓" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                        <TextBlock x:Name="CrackedTitle" Text="Cracked Version" FontSize="20" FontWeight="Bold" 
                                   Foreground="#3EC7E8" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock x:Name="CrackedDescription" 
                                   Text="I want to download the full cracked game (Leuan's Version)"
                                   FontSize="12" Foreground="#E5E7EB" TextWrapping="Wrap" 
                                   TextAlignment="Center" Margin="0,0,0,20"/>

                        <Button x:Name="CrackedBtn" Content="Choose Cracked" Height="45"
                                Background="#3EC7E8" Foreground="White" FontWeight="Bold"
                                FontSize="14" Cursor="Hand" Click="CrackedBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                            CornerRadius="8" Padding="15,10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#0EA5E9"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Close Button -->
            <Button x:Name="CloseBtn" Grid.Row="3" Content="❌ Close" Height="40" Margin="0,30,0,0"
                    Background="#30FFFFFF" Foreground="White" FontWeight="SemiBold"
                    Cursor="Hand" Click="CloseBtn_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="15,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>