<Window x:Class="ModernDesign.MVVM.View.IntermediateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Intermediate Modding Categories"
        Height="620" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="#0F172A"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F9FAFB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="BodyStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Bahnschrift Light"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Tarjetas de categoría (lista izquierda) -->
        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1.04" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1.04" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                                 To="1" Duration="0:0:0.12"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                                 To="1" Duration="0:0:0.12"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tarjetas de lecciones (panel derecho) -->
        <Style x:Key="LessonCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="BadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="TitleText"
                       Text="🛠️ Intermediate Modding Categories"
                       Style="{StaticResource TitleStyle}"
                       FontSize="22"/>
            <TextBlock x:Name="SubtitleText"
                       Text="Take your mods beyond beginner level with focused lessons."
                       Style="{StaticResource BodyStyle}"
                       FontSize="12"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- MAIN AREA -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT: CATEGORY LIST -->
            <Border Grid.Column="0" Background="#020617" CornerRadius="12" Padding="10" Margin="0,0,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="CategoryListPanel">

                        <!-- XML / Tuning avanzado -->
                        <Border x:Name="CardXml"
                                Style="{StaticResource CategoryCard}"
                                Tag="xml"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="📄" FontSize="20"/>
                                <TextBlock x:Name="CardXmlTitle"
                                           Text="Advanced XML Tuning"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardXmlDesc"
                                           Text="Override, inject y editar tuning de forma segura."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Gameplay intermedio -->
                        <Border x:Name="CardGameplay"
                                Style="{StaticResource CategoryCard}"
                                Tag="gameplay"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="🎮" FontSize="20"/>
                                <TextBlock x:Name="CardGameplayTitle"
                                           Text="Intermediate Gameplay"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardGameplayDesc"
                                           Text="Ajusta autonomías, necesidades y progresión."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- CAS & Objetos -->
                        <Border x:Name="CardCasObjects"
                                Style="{StaticResource CategoryCard}"
                                Tag="cas_objects"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="🧵" FontSize="20"/>
                                <TextBlock x:Name="CardCasObjectsTitle"
                                           Text="CAS &amp; Objects"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardCasObjectsDesc"
                                           Text="Recolors intermedios y ajustes de objetos."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                        <!-- Organización & Rendimiento -->
                        <Border x:Name="CardPerformance"
                                Style="{StaticResource CategoryCard}"
                                Tag="performance"
                                MouseLeftButtonUp="CategoryCard_Click">
                            <StackPanel Margin="6">
                                <TextBlock Text="⚙️" FontSize="20"/>
                                <TextBlock x:Name="CardPerformanceTitle"
                                           Text="Performance &amp; QA"
                                           Style="{StaticResource TitleStyle}"
                                           FontSize="14"
                                           Margin="0,4,0,0"/>
                                <TextBlock x:Name="CardPerformanceDesc"
                                           Text="Estructura de carpetas, merges y pruebas."
                                           Style="{StaticResource BodyStyle}"
                                           FontSize="11"
                                           Opacity="0.9"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- RIGHT: LESSONS -->
            <Border Grid.Column="1" Background="#020617" CornerRadius="12" Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock x:Name="CategoryTitleText"
                                   Text="Advanced XML Tuning"
                                   Style="{StaticResource TitleStyle}"
                                   FontSize="18"/>
                        <TextBlock x:Name="CategoryIntroText"
                                   Text="Learn how to safely override, inject and extend existing game tuning files."
                                   Style="{StaticResource BodyStyle}"
                                   FontSize="12"
                                   Margin="0,4,0,10"/>

                        <StackPanel x:Name="LessonsPanel"/>

                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- FOOTER -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button x:Name="CloseButton"
                    Content="Close"
                    Padding="14,6"
                    Background="#374151"
                    Foreground="#E5E7EB"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
