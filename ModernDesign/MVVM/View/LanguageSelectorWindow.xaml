<Window x:Class="ModernDesign.MVVM.View.LanguageSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Language Selector" 
        Height="450" Width="550"
        MinHeight="450" MinWidth="550"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock x:Name="HeaderText"
                           Text="🌍 Language Changer"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
                <TextBlock x:Name="SubHeaderText"
                           Text="Change your game language easily"
                           FontSize="12"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>

            <!-- Decorative Line -->
            <Border Grid.Row="1" Height="2" Background="#334155" CornerRadius="1" Margin="0,0,0,20"/>

            <!-- Main Content -->
            <!-- Main Content -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                <Border Background="#10FFFFFF" CornerRadius="12" Padding="25">
                    <StackPanel>
                        <TextBlock Text="🌐" FontSize="52" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" 
                       FontSize="13" Foreground="#E5E7EB" TextAlignment="Center" 
                       Margin="0,0,0,25" LineHeight="20">
                <Run Text="Use the Language Changer tool to switch your game language."/>
                <LineBreak/><LineBreak/>
                <Run Text="Click the button below to download and run the tool." FontWeight="SemiBold"/>
                        </TextBlock>

                        <!-- Download Button (Visible when not downloaded) -->
                        <Button x:Name="DownloadBtn" Height="48" Margin="0,-5,0,12"
                    Visibility="Visible"
                    Background="#F59E0B" Foreground="White" FontWeight="Bold"
                    FontSize="14" Cursor="Hand" Click="DownloadBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="12,10">
                                        <TextBlock Text="📥 Download Language Changer"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#D97706"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Change Language Button -->
                        <Button x:Name="ChangeLanguageBtn" Height="50"
                    Background="#22C55E" Foreground="White" FontWeight="Bold"
                    FontSize="15" Cursor="Hand" Click="ChangeLanguageBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="12,10">
                                        <TextBlock Text="🌍 Open Language Changer"
                                       TextWrapping="Wrap" TextAlignment="Center"
                                       Foreground="White" FontWeight="Bold" FontSize="15"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#16A34A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <!-- Status Text -->
            <TextBlock x:Name="StatusText" Grid.Row="3" 
                       Text=""
                       FontSize="10" Foreground="#94A3B8" 
                       HorizontalAlignment="Center" Margin="0,12,0,0"
                       TextWrapping="Wrap" TextAlignment="Center"
                       MaxWidth="450"/>

            <!-- Close Button -->
            <Button x:Name="CloseBtn" Grid.Row="4" Content="❌ Close" Height="38" Margin="0,12,0,0"
                    Background="#30FFFFFF" Foreground="White" FontWeight="SemiBold"
                    FontSize="12" Cursor="Hand" Click="CloseBtn_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="12,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>