<Window x:Class="ModernDesign.MVVM.View.CrackedGameInstallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leuan | Cracked Game Installer" 
        Height="600" Width="700"
        WindowStyle="None"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Icon="/Icono_TLK.ico">

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F172A" Offset="0"/>
                <GradientStop Color="#1E293B" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Padding="15" Background="#10FFFFFF" CornerRadius="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock x:Name="HeaderText" 
                               Text="🔓 Instalando Leuan's Version..." 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                    <TextBlock x:Name="SubHeaderText" 
                               Text="Descargando la versión crackeada completa del juego (sin DLCs)" 
                               Foreground="#94A3B8" 
                               FontSize="11" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Path Selector -->
            <Border Grid.Row="1" Padding="12,10" CornerRadius="10" Background="#10FFFFFF" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="📁" FontSize="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="PathLabelText" Text="Installation location" 
                                   Foreground="White" FontSize="12" 
                                   FontWeight="SemiBold" VerticalAlignment="Center" Margin="6,0,0,0"/>
                        <TextBlock x:Name="StatusText" Text="  (Select folder...)" 
                                   Foreground="#F59E0B" FontSize="10" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#15FFFFFF" CornerRadius="6" Padding="8,6">
                            <TextBlock x:Name="PathTextBlock" Text="Click 'Browse' to select..." 
                                       Foreground="#94A3B8" FontSize="11" VerticalAlignment="Center" 
                                       TextTrimming="CharacterEllipsis"/>
                        </Border>

                        <Button x:Name="BrowseBtn" Grid.Column="1" Content="Browse" Margin="6,0,0,0"
                                Background="#30FFFFFF" Foreground="White" FontWeight="SemiBold"
                                Padding="10,6" FontSize="11" Cursor="Hand"
                                Click="BrowseBtn_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                            CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bg" Property="Background" Value="#3EC7E8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <!-- Progress Panel -->
            <StackPanel x:Name="ProgressPanel" Grid.Row="2" Visibility="Collapsed" Margin="0,0,0,10">
                <Grid>
                    <TextBlock x:Name="ProgressText" Text="Descargando..." Foreground="White" FontSize="12"/>
                    <TextBlock x:Name="ProgressPercent" Text="0%" Foreground="#3EC7E8" 
                               FontSize="12" HorizontalAlignment="Right"/>
                </Grid>

                <Border Height="6" CornerRadius="3" Background="#20FFFFFF" Margin="0,6,0,0">
                    <Border x:Name="ProgressBar" HorizontalAlignment="Left" Width="0" 
                            CornerRadius="3" Background="#3EC7E8"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock x:Name="SpeedLabel" Text="Velocidad:" Foreground="#94A3B8" FontSize="10"/>
                    <TextBlock x:Name="SpeedText" Text="0 MB/s" Foreground="#E5E7EB" FontSize="10" Margin="5,0,15,0"/>

                    <TextBlock x:Name="EtaLabel" Text="ETA:" Foreground="#94A3B8" FontSize="10"/>
                    <TextBlock x:Name="EtaText" Text="--:--" Foreground="#E5E7EB" FontSize="10" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Log -->
            <Border Grid.Row="3" Background="#10FFFFFF" CornerRadius="10" Padding="10">
                <ScrollViewer x:Name="LogScroller" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogTextBox"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="#E5E7EB"
                             FontSize="10"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CancelBtn" 
                        Grid.Column="0"
                        Content="❌ Cancelar"
                        Height="40"
                        Background="#30FFFFFF"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="CancelBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="15,10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#40FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="StartBtn" 
                        Grid.Column="2"
                        Content="🔓 Iniciar Instalación"
                        Height="40"
                        Background="#0A6BF2"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        IsEnabled="False"
                        Click="StartBtn_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                    CornerRadius="8" Padding="15,10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bg" Property="Background" Value="#3EC7E8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="bg" Property="Background" Value="#404040"/>
                                    <Setter Property="Foreground" Value="#808080"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>