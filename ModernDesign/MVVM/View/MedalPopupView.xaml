<Window x:Class="ModernDesign.MVVM.View.MedalPopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize"
        Width="500"
        Height="400"
        Loaded="Window_Loaded">

    <Grid x:Name="MainGrid" 
          Background="#DC020617"
          Opacity="0">

        <Border x:Name="MedalBorder"
                Background="#111827"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="20"
                Padding="60"
                BorderThickness="4">

            <Border.Effect>
                <DropShadowEffect x:Name="GlowEffect"
                                  BlurRadius="40"
                                  ShadowDepth="0"
                                  Opacity="0.9"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">
                <!-- Emoji con efecto de color -->
                <Viewbox Width="120" Height="120" Margin="0,0,0,20">
                    <TextBlock x:Name="MedalEmoji"
                               FontSize="120"
                               HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect x:Name="EmojiGlow"
                                              BlurRadius="20"
                                              ShadowDepth="0"
                                              Opacity="1"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Viewbox>

                <TextBlock x:Name="MedalText"
                           FontSize="32"
                           FontWeight="Bold"
                           FontFamily="Bahnschrift Light"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>