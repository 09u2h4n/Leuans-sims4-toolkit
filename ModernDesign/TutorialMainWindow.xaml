<Window x:Class="ModernDesign.MVVM.View.TutorialMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial - Leuan's Sims 4 ToolKit"
        MinHeight="600" MinWidth="700"
        Height="600" Width="700"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Storyboard para fade in -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainBorder"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           Duration="0:0:0.5"/>
        </Storyboard>

        <!-- Storyboard para slide in desde la izquierda -->
        <Storyboard x:Key="SlideInFromLeft">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="-100" To="0"
                           Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           Duration="0:0:0.4"/>
        </Storyboard>

        <!-- Storyboard para slide in desde la derecha -->
        <Storyboard x:Key="SlideInFromRight">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                           From="100" To="0"
                           Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1"
                           Duration="0:0:0.4"/>
        </Storyboard>
    </Window.Resources>

    <Border x:Name="MainBorder" Background="#1E293B" CornerRadius="12" BorderBrush="#334155" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="15,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header con animación -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15"
                       x:Name="HeaderPanel" Opacity="0"
                       RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TranslateTransform/>
                </StackPanel.RenderTransform>

                <TextBlock x:Name="TutorialTitle"
                           Text="🎓 Quick Tutorial"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#F8FAFC"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="0,0,0,6"/>

                <TextBlock x:Name="TutorialSubtitle"
                           Text="Learn the basics in 3 simple steps"
                           FontSize="13"
                           Foreground="#94A3B8"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Content con scroll invisible -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden" Margin="0,0,0,12">
                <StackPanel x:Name="ContentPanel">

                    <!-- Step 1 -->
                    <Border Background="#0F172A" CornerRadius="10" Padding="15,12" Margin="0,0,0,12"
                           x:Name="Step1Border" Opacity="0"
                           RenderTransformOrigin="0.5,0.5">
                        <Border.Effect>
                            <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0" Opacity="0"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform/>
                        </Border.RenderTransform>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Background="#3B82F6" CornerRadius="15" Width="30" Height="30" Margin="0,0,10,0">
                                    <TextBlock Text="1" FontSize="16" FontWeight="Bold" Foreground="White"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="Step1Title"
                                           Text="Select Your Game Path"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#F8FAFC"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <TextBlock x:Name="Step1Description"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#CBD5E1"
                                       LineHeight="16"
                                       Margin="40,0,0,0">
                                <Run Text="First, you need to tell the ToolKit where The Sims 4 is installed on your computer."/><LineBreak/><LineBreak/>
                                <Run Text="• Click on " FontWeight="SemiBold"/><Run Text="'Browse'" Foreground="#60A5FA" FontWeight="Bold"/><Run Text=" or " FontWeight="SemiBold"/><Run Text="'Auto-Detect'" Foreground="#22C55E" FontWeight="Bold"/><LineBreak/>
                                <Run Text="• The path should look like: " FontStyle="Italic"/><Run Text="C:\Program Files\EA Games\The Sims 4" Foreground="#FBBF24" FontFamily="Consolas" FontSize="10"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Step 2 -->
                    <Border Background="#0F172A" CornerRadius="10" Padding="15,12" Margin="0,0,0,12"
                           x:Name="Step2Border" Opacity="0"
                           RenderTransformOrigin="0.5,0.5">
                        <Border.Effect>
                            <DropShadowEffect Color="#22C55E" BlurRadius="20" ShadowDepth="0" Opacity="0"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform/>
                        </Border.RenderTransform>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Background="#22C55E" CornerRadius="15" Width="30" Height="30" Margin="0,0,10,0">
                                    <TextBlock Text="2" FontSize="16" FontWeight="Bold" Foreground="White"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="Step2Title"
                                           Text="Choose Your DLCs"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#F8FAFC"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <TextBlock x:Name="Step2Description"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#CBD5E1"
                                       LineHeight="16"
                                       Margin="40,0,0,0">
                                <Run Text="Browse through the list of available DLCs and select what you want to install."/><LineBreak/><LineBreak/>
                                <Run Text="• Use " FontWeight="SemiBold"/><Run Text="'Select All'" Foreground="#60A5FA" FontWeight="Bold"/><Run Text=" to install everything"/><LineBreak/>
                                <Run Text="• Or pick individual packs you're interested in"/><LineBreak/>
                                <Run Text="• Already installed DLCs will be marked with a " FontWeight="SemiBold"/><Run Text="green checkmark ✓" Foreground="#22C55E" FontWeight="Bold"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Step 3 -->
                    <Border Background="#0F172A" CornerRadius="10" Padding="15,12"
                           x:Name="Step3Border" Opacity="0"
                           RenderTransformOrigin="0.5,0.5">
                        <Border.Effect>
                            <DropShadowEffect Color="#F59E0B" BlurRadius="20" ShadowDepth="0" Opacity="0"/>
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform/>
                        </Border.RenderTransform>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Border Background="#F59E0B" CornerRadius="15" Width="30" Height="30" Margin="0,0,10,0">
                                    <TextBlock Text="3" FontSize="16" FontWeight="Bold" Foreground="White"
                                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock x:Name="Step3Title"
                                           Text="Download and Install"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#F8FAFC"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <TextBlock x:Name="Step3Description"
                                       TextWrapping="Wrap"
                                       FontSize="11"
                                       Foreground="#CBD5E1"
                                       LineHeight="16"
                                       Margin="40,0,0,0">
                                <Run Text="Click the Download button and let the ToolKit do its magic!"/><LineBreak/><LineBreak/>
                                <Run Text="• The ToolKit will download and install everything automatically"/><LineBreak/>
                                <Run Text="• You can see progress, speed, and ETA in real-time"/><LineBreak/>
                                <Run Text="• Once done, install the " FontWeight="SemiBold"/><Run Text="EA DLC Unlocker" Foreground="#A78BFA" FontWeight="Bold"/><Run Text=" to activate all DLCs"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>

            <!-- Footer Buttons con animación -->
            <Grid Grid.Row="2"
                  x:Name="FooterPanel" Opacity="0"
                  RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="GotItBtn"
                        Grid.Column="0"
                        Content="✓ Got it, let's start!"
                        Height="45"
                        Margin="0,0,8,0"
                        Background="#22C55E"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="GotItBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#22C55E"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#16A34A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="SkipBtn"
                        Grid.Column="1"
                        Content="Skip Tutorial"
                        Width="120"
                        Height="45"
                        Background="#64748B"
                        Foreground="White"
                        FontSize="13"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="SkipBtn_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#64748B"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="10"
                                                Padding="15,10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#475569"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>